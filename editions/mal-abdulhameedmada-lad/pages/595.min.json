{"pages":[{"chapter":91,"verse":1,"text":"91|1|sūryanuṁ atinṟe prabhayuṁ tanneyāṇa satyaṁ"},{"chapter":91,"verse":2,"text":"91|2|candran tanneyāṇa satyaṁ; at atine tuṭarnn varumpēāḷ"},{"chapter":91,"verse":3,"text":"91|3|pakaline tanneyāṇa satyaṁ; at atine (sūryane) pratyakṣappeṭuttumpēḷ"},{"chapter":91,"verse":4,"text":"91|4|rātriye tanneyāṇa satyaṁ; at atine mūṭumpēāḷ"},{"chapter":91,"verse":5,"text":"91|5|ākāśatteyuṁ, atine sthāpicca rītiyeyuṁ tanneyāṇa satyaṁ"},{"chapter":91,"verse":6,"text":"91|6|bhūmiyeyuṁ, atine vistr̥tamākkiya rītiyeyuṁ tanneyāṇa satyaṁ"},{"chapter":91,"verse":7,"text":"91|7|manuṣyāstitvatteyuṁ atine sanvidhānicca rītiyeyuṁ tanneyāṇa satyaṁ"},{"chapter":91,"verse":8,"text":"91|8|enniṭṭ atinn atinṟe duṣṭatayuṁ atinṟe sūkṣmatayuṁ sambandhicc avan bēādhaṁ nalkukayuṁ ceytirikkunnu"},{"chapter":91,"verse":9,"text":"91|9|tīrccayāyuṁ atine (astitvatte) pariśud'dhamākkiyavan vijayaṁ kaivariccu"},{"chapter":91,"verse":10,"text":"91|10|atine kaḷaṅkappeṭuttiyavan tīrccayāyuṁ nirbhāgyamaṭayukayuṁ ceytu"},{"chapter":91,"verse":11,"text":"91|11|thamūd gēātraṁ atinṟe dhikkāraṁ mūlaṁ (satyatte) niṣēdhiccu taḷḷukayuṇṭāyi"},{"chapter":91,"verse":12,"text":"91|12|avaruṭe kūṭṭattile ēṟṟavuṁ duṣṭatayuḷḷavan oruṅṅi puṟappeṭṭa sandarbhaṁ"},{"chapter":91,"verse":13,"text":"91|13|appēāḷ allāhuvinṟe dūtan avarēāṭ paṟaññu. allāhuvinṟe oṭṭakatteyuṁ atinṟe veḷḷaṁ kuṭiyuṁ niṅṅaḷ sūkṣikkuka"},{"chapter":91,"verse":14,"text":"91|14|appēāḷ avar addēhatte niṣēdhiccu taḷḷukayuṁ atine (oṭṭakatte) aṟukeāla naṭattukayuṁ ceytu. appēāḷ avaruṭe pāpaṁ nimittaṁ avaruṭe rakṣitāv avarkk samūla nāśaṁ varuttukayuṁ (avarkkellāṁ) at samamākkukayuṁ ceytu"},{"chapter":91,"verse":15,"text":"91|15|atinṟe anantaraphalaṁ avan bhayappeṭṭirunnumilla"},{"chapter":92,"verse":1,"text":"92|1|rāvinetanneyāṇa satyaṁ ; at mūṭikeāṇṭirikkumpēāḷ"},{"chapter":92,"verse":2,"text":"92|2|pakaline tanneyāṇa satyaṁ ; at pratyakṣappeṭumpēāḷ"},{"chapter":92,"verse":3,"text":"92|3|āṇineyuṁ peṇṇineyuṁ sr̥ṣṭicca rītiye tanneyāṇa satyaṁ"},{"chapter":92,"verse":4,"text":"92|4|tīrccayāyuṁ niṅṅaḷuṭe pariśramaṁ vibhinna rūpattiluḷḷatākunnu"},{"chapter":92,"verse":5,"text":"92|5|ennāl ēteārāḷ dānaṁ nalkukayuṁ, sūkṣmata pālikkukayuṁ"},{"chapter":92,"verse":6,"text":"92|6|ēṟṟavuṁ uttamamāyatine satyappeṭuttukayuṁ ceytuvēā"},{"chapter":92,"verse":7,"text":"92|7|avannu nāṁ ēṟṟavuṁ eḷuppamāyatilēkk sekaryappeṭutti keāṭukkunnatāṇ‌"},{"chapter":92,"verse":8,"text":"92|8|ennāl ār piśukku kāṇikkukayuṁ, svayaṁ paryāptata naṭikkukayuṁ"},{"chapter":92,"verse":9,"text":"92|9|ēṟṟavuṁ uttamamāyatine niṣēdhiccu taḷḷukayuṁ ceytuvēā"},{"chapter":92,"verse":10,"text":"92|10|avannu nāṁ ēṟṟavuṁ ñerukkamuḷḷatilēkk sekaryameārukkikeāṭukkunnatāṇ‌"},{"chapter":92,"verse":11,"text":"92|11|avan nāśattil patikkumpēāḷ avanṟe dhanaṁ avann prayēājanappeṭunnatalla"},{"chapter":92,"verse":12,"text":"92|12|tīrccayāyuṁ mārgadarśanaṁ nam'muṭe bādhyatayākunnu"},{"chapter":92,"verse":13,"text":"92|13|tīrccayāyuṁ namukkuḷḷatākunnu paralēākavuṁ ihalēākavuṁ"},{"chapter":92,"verse":14,"text":"92|14|atināl āḷikkattikkeāṇṭirikkunna agniyeppaṟṟi ñān niṅṅaḷkk tākkīt nalkiyirikkunnu"}]}