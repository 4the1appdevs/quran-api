{"pages":[{"chapter":74,"verse":18,"text":"74|18|tīrccayāyuṁ avaneānnu cinticcu, avaneānnu kaṇakkākkukayuṁ ceytu"},{"chapter":74,"verse":19,"text":"74|19|atināl avan naśikkaṭṭe. eṅṅaneyāṇavan kaṇakkākkiyat‌"},{"chapter":74,"verse":20,"text":"74|20|vīṇṭuṁ avan naśikkaṭṭe, eṅṅaneyāṇavan kaṇakkākkiyat‌"},{"chapter":74,"verse":21,"text":"74|21|pinnīṭ avaneānnu nēākki"},{"chapter":74,"verse":22,"text":"74|22|pinne avan mukhaṁ cuḷikkukayuṁ mukhaṁ kaṟuppikkukayuṁ ceytu"},{"chapter":74,"verse":23,"text":"74|23|pinne avan pinnēāṭṭ māṟukayuṁ ahaṅkāraṁ naṭikkukayuṁ ceytu"},{"chapter":74,"verse":24,"text":"74|24|enniṭṭavan paṟaññu: it (āril ninnēā) ud'dharikkappeṭunna māraṇamallāte maṟṟeānnumalla"},{"chapter":74,"verse":25,"text":"74|25|it manuṣyanṟe vākkallāte maṟṟeānnumalla"},{"chapter":74,"verse":26,"text":"74|26|vaḻiye ñān avane sakhaṟil (narakattil) iṭṭ erikkunnatāṇ‌"},{"chapter":74,"verse":27,"text":"74|27|sakhar ennāl entāṇenn ninakkaṟiyumēā"},{"chapter":74,"verse":28,"text":"74|28|at onnuṁ bākkiyākkukayēā viṭṭukaḷayukayēā illa"},{"chapter":74,"verse":29,"text":"74|29|at teāli karicc rūpaṁ māṟṟikkaḷayunnatāṇ‌"},{"chapter":74,"verse":30,"text":"74|30|atinṟe mēlnēāṭṭattin patteāmpat pēruṇṭ‌"},{"chapter":74,"verse":31,"text":"74|31|narakattinṟe mēlnēāṭṭakkārāyi nāṁ malakkukaḷe mātramāṇ niścayiccirikkunnat‌. avaruṭe eṇṇatte nāṁ satyaniṣēdhikaḷkk oru parīkṣaṇaṁ mātramākkiyirikkunnu. vēdaṁ nalkappeṭṭiṭṭuḷḷavarkk dr̥ḍhabēādhyaṁ varuvānuṁ satyaviśvāsikaḷkk viśvāsaṁ vard'dhikkānuṁ vēdaṁ nalkappeṭṭavaruṁ satyaviśvāsikaḷuṁ sanśayattilakappeṭātirikkānuṁ allāhu enteāru upamayāṇ itu keāṇṭ uddēśicciṭṭuḷḷatenn hr̥dayaṅṅaḷil rēāgamuḷḷavaruṁ satyaniṣēdhikaḷuṁ paṟayuvānuṁ vēṇṭiyatre at‌. aprakāraṁ allāhu tān uddēśikkunnavare piḻappikkukayuṁ, tān uddēśikkunnavare nērvaḻiyilākkukayuṁ ceyyunnu. ninṟe rakṣitāvinṟe sain'yaṅṅaḷe avanallāte maṟṟāruṁ aṟiyukayilla. it manuṣyarkk oru ulbēādhanamallāte maṟṟeānnumalla"},{"chapter":74,"verse":32,"text":"74|32|nis'sanśayaṁ, candrane tanneyāṇa satyaṁ"},{"chapter":74,"verse":33,"text":"74|33|rātri pinniṭṭ pēākumpēāḷ atine tanneyāṇa satyaṁ"},{"chapter":74,"verse":34,"text":"74|34|prabhātaṁ pularnnāl atu tanneyāṇa satyaṁ"},{"chapter":74,"verse":35,"text":"74|35|tīrccayāyuṁ at (narakaṁ) geravamuḷḷa kāryaṅṅaḷil onnākunnu"},{"chapter":74,"verse":36,"text":"74|36|manuṣyarkk oru tākkītenna nilayil"},{"chapter":74,"verse":37,"text":"74|37|atāyat niṅṅaḷil ninn munnēāṭṭ pēākuvānēā, pinnēāṭṭ vekkuvānēā uddēśikkunnavarkk‌"},{"chapter":74,"verse":38,"text":"74|38|ōrēā vyaktiyuṁ tān sampādiccu veccatin paṇayappeṭṭavanākunnu"},{"chapter":74,"verse":39,"text":"74|39|valatupakṣakkāreāḻike"},{"chapter":74,"verse":40,"text":"74|40|cila svargattēāppukaḷilāyirikkuṁ avar. avar anvēṣikkuṁ"},{"chapter":74,"verse":41,"text":"74|41|kuṟṟavāḷikaḷeppaṟṟi"},{"chapter":74,"verse":42,"text":"74|42|niṅṅaḷe narakattil pravēśippiccat enteānnāṇenn‌"},{"chapter":74,"verse":43,"text":"74|43|avar (kuṟṟavāḷikaḷ) maṟupaṭi paṟayuṁ: ñaṅṅaḷ namaskarikkunnavaruṭe kūṭṭattilāyilla"},{"chapter":74,"verse":44,"text":"74|44|ñaṅṅaḷ agatikk āhāraṁ nalkumāyirunnilla"},{"chapter":74,"verse":45,"text":"74|45|tēānnivāsattil muḻukunnavaruṭe kūṭe ñaṅṅaḷuṁ muḻukumāyirunnu"},{"chapter":74,"verse":46,"text":"74|46|pratiphalattinṟe nāḷine ñaṅṅaḷ niṣēdhiccu kaḷayumāyirunnu"},{"chapter":74,"verse":47,"text":"74|47|aṅṅaneyirikke ā uṟappāya maraṇaṁ ñaṅṅaḷkk vannetti"}]}