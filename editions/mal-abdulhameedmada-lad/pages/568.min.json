{"pages":[{"chapter":69,"verse":35,"text":"69|35|atināl inn iviṭe avann oru uṟṟabandhuvumilla"},{"chapter":69,"verse":36,"text":"69|36|durnīrukaḷ oliccu kūṭiyatil ninnallāte maṟṟu āhāravumilla"},{"chapter":69,"verse":37,"text":"69|37|teṟṟukārallāte atu bhakṣikkukayilla"},{"chapter":69,"verse":38,"text":"69|38|ennāl niṅṅaḷ kāṇunnavayekkeāṇṭ ñān satyaṁ ceyt paṟayunnu"},{"chapter":69,"verse":39,"text":"69|39|niṅṅaḷ kāṇāttavayekkeāṇṭuṁ"},{"chapter":69,"verse":40,"text":"69|40|tīrccayāyuṁ it mān'yanāya oru dūtanṟe vākku tanneyākunnu"},{"chapter":69,"verse":41,"text":"69|41|iteāru kaviyuṭe vākkalla. vaḷare kuṟaccē niṅṅaḷ viśvasikkunnuḷḷū"},{"chapter":69,"verse":42,"text":"69|42|oru jyēātsyanṟe vākkumalla. vaḷarekkuṟaccē niṅṅaḷ ālēāciccu manas'silākkunnuḷḷū"},{"chapter":69,"verse":43,"text":"69|43|it lēākarakṣitāviṅkal ninn avatarippikkappeṭṭatākunnu"},{"chapter":69,"verse":44,"text":"69|44|nam'muṭe pēril addēhaṁ (pravācakan) valla vākkuṁ keṭṭiccamaccu paṟaññirunneṅkil"},{"chapter":69,"verse":45,"text":"69|45|addēhatte nāṁ valatukai keāṇṭ piṭikūṭukayuṁ"},{"chapter":69,"verse":46,"text":"69|46|enniṭṭ addēhattinṟe jīvanāḍi nāṁ muṟiccukaḷayukayuṁ ceyyumāyirunnu"},{"chapter":69,"verse":47,"text":"69|47|appēāḷ niṅṅaḷil ārkkuṁ addēhattil ninn (śikṣaye) taṭayānāvilla"},{"chapter":69,"verse":48,"text":"69|48|tīrccayāyuṁ it (khur'ān) bhayabhaktiyuḷḷavarkk oru ulbēādhanamākunnu"},{"chapter":69,"verse":49,"text":"69|49|tīrccayāyuṁ niṅṅaḷuṭe kūṭṭattil (itine) niṣēdhiccu taḷḷunnavaruṇṭenn namukkaṟiyāṁ"},{"chapter":69,"verse":50,"text":"69|50|tīrccayāyuṁ it satyaniṣēdhikaḷkk khēdattin kāraṇavumākunnu"},{"chapter":69,"verse":51,"text":"69|51|tīrccayāyuṁ it dr̥ḍhamāya yāthārt'thyamākunnu"},{"chapter":69,"verse":52,"text":"69|52|atināl nī ninṟe mahānāya rakṣitāvinṟe nāmatte prakīrttikkuka"},{"chapter":70,"verse":1,"text":"70|1|sambhavikkānirikkunna oru śikṣaye oru cēādyakarttāv atā āvaśyappeṭṭirikkunnu"},{"chapter":70,"verse":2,"text":"70|2|satyaniṣēdhikaḷkk at taṭukkuvān ārumilla"},{"chapter":70,"verse":3,"text":"70|3|kayaṟippēākunna vaḻikaḷuṭe adhipanāya allāhuviṅkal ninn varunna (śikṣaye)"},{"chapter":70,"verse":4,"text":"70|4|ampatināyiraṁ keāllattinṟe aḷavuḷḷatāya oru divasattil malakkukaḷuṁ ātmāvuṁ avaṅkalēkk kayaṟippēākunnu"},{"chapter":70,"verse":5,"text":"70|5|ennāl (nabiyē,) nī bhaṅgiyāya kṣama kaikkeāḷḷuka"},{"chapter":70,"verse":6,"text":"70|6|tīrccayāyuṁ avar atine vidūramāyi kāṇunnu"},{"chapter":70,"verse":7,"text":"70|7|nāṁ atine aṭuttatāyuṁ kāṇunnu"},{"chapter":70,"verse":8,"text":"70|8|ākāśaṁ urukiya lēāhaṁ pēāle ākunna divasaṁ"},{"chapter":70,"verse":9,"text":"70|9|parvvataṅṅaḷ kaṭaññarēāmaṁ pēāleyuṁ"},{"chapter":70,"verse":10,"text":"70|10|oruṟṟa bandhuvuṁ maṟṟeāru uṟṟabandhuvinēāṭ (ann‌) yāteānnuṁ cēādikkukayilla"}]}