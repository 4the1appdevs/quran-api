{"chapter":[{"chapter":87,"verse":1,"text":"87|1|atyunnatanāya ninṟe rakṣitāvinṟe nāmaṁ prakīrttikkuka"},{"chapter":87,"verse":2,"text":"87|2|sr̥ṣṭikkukayuṁ, sanvidhānikkukayuṁ ceyta (rakṣitāvinṟe)"},{"chapter":87,"verse":3,"text":"87|3|vyavastha nirṇayiccu mārgadarśanaṁ nalkiyavanuṁ"},{"chapter":87,"verse":4,"text":"87|4|mēccil puṟaṅṅaḷ ulpādippiccavanuṁ"},{"chapter":87,"verse":5,"text":"87|5|enniṭṭ atine uṇaṅṅikkariñña cavaṟākki tīrttavanumāya (rakṣitāvinṟe nāmaṁ)"},{"chapter":87,"verse":6,"text":"87|6|ninakk nāṁ ōtittarāṁ. nī maṟannupēākukayilla"},{"chapter":87,"verse":7,"text":"87|7|allāhu uddēśiccateāḻike. tīrccayāyuṁ avan parasyamāyatuṁ, rahasyamāyirikkunnatuṁ aṟiyunnu"},{"chapter":87,"verse":8,"text":"87|8|kūṭutal eḷuppamuḷḷatilēkk ninakk nāṁ sekaryamuṇṭākkittarunnatumāṇ‌"},{"chapter":87,"verse":9,"text":"87|9|atināl upadēśaṁ phalappeṭunnuveṅkil nī upadēśiccu keāḷḷuka"},{"chapter":87,"verse":10,"text":"87|10|bhayappeṭunnavar upadēśaṁ svīkariccu keāḷḷunnatāṇ‌"},{"chapter":87,"verse":11,"text":"87|11|ēṟṟavuṁ nirbhāgyavānāyiṭṭuḷḷavan atine (upadēśatte) viṭṭakannu pēākunnatāṇ‌"},{"chapter":87,"verse":12,"text":"87|12|valiya agniyil kaṭann eriyunnavanatre avan"},{"chapter":87,"verse":13,"text":"87|13|pinnīṭ avan atil marikkukayilla. jīvikkukayumilla"},{"chapter":87,"verse":14,"text":"87|14|tīrccayāyuṁ pariśud'dhi nēṭiyavar vijayaṁ prāpiccu"},{"chapter":87,"verse":15,"text":"87|15|tanṟe rakṣitāvinṟe nāmaṁ smarikkukayuṁ enniṭṭ namaskarikkukayuṁ (ceytavan)"},{"chapter":87,"verse":16,"text":"87|16|pakṣe, niṅṅaḷ aihikajīvitattinn kūṭutal prādhān'yaṁ nalkunnu"},{"chapter":87,"verse":17,"text":"87|17|paralēākamākunnu ēṟṟavuṁ uttamavuṁ nilanilkkunnatuṁ"},{"chapter":87,"verse":18,"text":"87|18|tīrccayāyuṁ it ādyatte ēṭukaḷil tanneyuṇṭ‌"},{"chapter":87,"verse":19,"text":"87|19|atāyat ibrāhīminṟeyuṁ mūsāyuṭeyuṁ ēṭukaḷil"}]}