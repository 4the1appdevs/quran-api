{"rukus":[{"chapter":51,"verse":1,"text":"51|1|śaktiyāyi (peāṭi) vitaṟikkeāṇṭirikkunnava (kāṟṟukaḷ) tanneyāṇa, satyaṁ"},{"chapter":51,"verse":2,"text":"51|2|(jala) bhāraṁ vahikkunna (mēghaṅṅaḷ) tanneyāṇa, satyaṁ"},{"chapter":51,"verse":3,"text":"51|3|niṣprayāsaṁ sañcarikkunnava (kappalukaḷ) tanneyāṇa, satyaṁ"},{"chapter":51,"verse":4,"text":"51|4|kāryaṅṅaḷ vibhajiccu keāṭukkunnavar (malakkukaḷ) tanneyāṇa, satyaṁ"},{"chapter":51,"verse":5,"text":"51|5|tīrccayāyuṁ niṅṅaḷkku tākkīt nalkappeṭunna kāryaṁ satyamāyiṭṭuḷḷat tanneyākunnu"},{"chapter":51,"verse":6,"text":"51|6|tīrccayāyuṁ n'yāyavidhi sambhavikkunnatu tanneyākunnu"},{"chapter":51,"verse":7,"text":"51|7|vividha pathaṅṅaḷuḷḷa ākāśaṁ tanneyāṇa,satyaṁ"},{"chapter":51,"verse":8,"text":"51|8|tīrccayāyuṁ niṅṅaḷ vibhinnamāya abhiprāyattilākunnu"},{"chapter":51,"verse":9,"text":"51|9|(satyattil ninn‌) teṟṟikkappeṭṭavan atil ninn (khur'ānil ninn‌) teṟṟikkappeṭunnu"},{"chapter":51,"verse":10,"text":"51|10|ūhāpēāhakkār śapikkappeṭaṭṭe"},{"chapter":51,"verse":11,"text":"51|11|vivarakkēṭil matimaṟannu kaḻiyunnavar"},{"chapter":51,"verse":12,"text":"51|12|n'yāyavidhiyuṭe nāḷ eppēāḻāyirikkuṁ ennavar cēādikkunnu"},{"chapter":51,"verse":13,"text":"51|13|narakāgniyil avar parīkṣaṇattin vidhēyarākunna divasamatre at‌"},{"chapter":51,"verse":14,"text":"51|14|(avarēāṭ paṟayappeṭuṁ:) niṅṅaḷkkuḷḷa parīkṣaṇaṁ niṅṅaḷ anubhavicc keāḷḷuvin. niṅṅaḷ enteānnin dhr̥tikūṭṭikkeāṇṭirunnuvēā atatre it‌"},{"chapter":51,"verse":15,"text":"51|15|tīrccayāyuṁ sūkṣmata pālikkunnavar svargattēāppukaḷiluṁ aruvikaḷilumāyirikkuṁ"},{"chapter":51,"verse":16,"text":"51|16|avarkk avaruṭe rakṣitāv nalkiyat ēṟṟuvāṅṅikkeāṇṭ‌. tīrccayāyuṁ avar atinu mump sad‌vr̥ttarāyirunnu"},{"chapter":51,"verse":17,"text":"51|17|rātriyil ninn alpabhāgamē avar uṟaṅṅāṟuṇṭāyirunnuḷḷū"},{"chapter":51,"verse":18,"text":"51|18|rātriyuṭe antyavēḷakaḷil avar pāpamēācanaṁ tēṭunnavarāyirunnu"},{"chapter":51,"verse":19,"text":"51|19|avaruṭe svattukkaḷilākaṭṭe cēādikkunnavannuṁ (upajīvanaṁ) taṭayappeṭṭavannuṁ oru avakāśamuṇṭāyirikkukayuṁ ceyyuṁ"},{"chapter":51,"verse":20,"text":"51|20|dr̥ḍhaviśvāsamuḷḷavarkk bhūmiyil pala dr̥ṣṭāntaṅṅaḷumuṇṭ‌"},{"chapter":51,"verse":21,"text":"51|21|niṅṅaḷil tanneyuṁ (pala dr̥ṣṭāntaṅṅaḷuṇṭ‌.)enniṭṭ niṅṅaḷ kaṇṭaṟiyunnille"},{"chapter":51,"verse":22,"text":"51|22|ākāśatt niṅṅaḷkkuḷḷa upajīvanavuṁ, niṅṅaḷēāṭ vāgdānaṁ ceyyappeṭunna kāryaṅṅaḷumuṇṭ‌"},{"chapter":51,"verse":23,"text":"51|23|ennāl ākāśattinṟeyuṁ bhūmiyuṭeyuṁ rakṣitāvine tanneyāṇa, satyaṁ! niṅṅaḷ sansārikkunnu ennatu pēāle tīrccayāyuṁ it satyamākunnu"}]}