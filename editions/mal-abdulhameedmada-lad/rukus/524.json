{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "82|1|ākāśaṁ peāṭṭi piḷarumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "82|2|nakṣatraṅṅaḷ keāḻiññu vīḻumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "82|3|samudraṅṅaḷ peāṭṭi oḻukumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "82|4|khab‌ṟukaḷ iḷakkimaṟikkappeṭumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "82|5|ōrēā vyaktiyuṁ tān munkūṭṭi ceytu veccatuṁ pinnēāṭṭ mēṟṟīvccatuṁ entāṇenn aṟiyunnatāṇ‌"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "82|6|hē; manuṣyā, udāranāya ninṟe rakṣitāvinṟe kāryattil ninne vañciccu kaḷaññatentāṇ‌"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "82|7|ninne sr̥ṣṭikkukayuṁ, ninne sanvidhānikkukayuṁ , ninne śariyāya avasthayilākkukayuṁ ceytavanatre avan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "82|8|tān uddēśicca rūpattil ninne saṅghaṭippiccavan"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "82|9|alla; pakṣe, pratiphala naṭapaṭiye niṅṅaḷ niṣēdhiccu taḷḷunnu"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "82|10|tīrccayāyuṁ niṅṅaḷuṭe mēl cila mēlnēāṭṭakkāruṇṭ‌"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "82|11|rēkhappeṭuttivekkunna cila mān'yanmār"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "82|12|niṅṅaḷ pravarttikkunnat avar aṟiyunnu"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "82|13|tīrccayāyuṁ sukr̥tavānmār sukhānubhavattil tanneyāyirikkuṁ"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "82|14|tīrccayāyuṁ durmārgikaḷ jvalikkunna narakāgniyil tanneyāyirikkuṁ"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "82|15|pratiphalattinṟe nāḷil avaratil kaṭann eriyunnatāṇ‌"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "82|16|avarkk atil ninn māṟi nilkkānāvilla"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "82|17|pratiphalanaṭapaṭiyuṭe divasaṁ ennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "82|18|vīṇṭuṁ; pratiphalanaṭapaṭiyuṭe divasaṁ ennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "82|19|orāḷkkuṁ maṟṟeārāḷkku vēṇṭi yāteānnuṁ adhīnappeṭuttānāvātta oru divasaṁ. annē divasaṁ kaikāryakarttr̥tvaṁ allāhuvinnāyirikkuṁ"
        }
