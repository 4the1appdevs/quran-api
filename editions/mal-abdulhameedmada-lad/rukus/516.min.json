{"rukus":[{"chapter":77,"verse":1,"text":"77|1|tuṭarettuṭare ayakkappeṭunnavayuṁ"},{"chapter":77,"verse":2,"text":"77|2|śaktiyāyi āññaṭikkunnavayuṁ"},{"chapter":77,"verse":3,"text":"77|3|parakke vyāpippikkunnavayuṁ"},{"chapter":77,"verse":4,"text":"77|4|vērtiriccu vivēcanaṁ ceyyunnavayuṁ"},{"chapter":77,"verse":5,"text":"77|5|divyasandēśaṁ iṭṭukeāṭukkunnavayumāyiṭṭuḷḷavaye tanneyākunnu satyaṁ"},{"chapter":77,"verse":6,"text":"77|6|oru oḻikaḻivāyikeāṇṭēā tākkītāyikkeāṇṭēā"},{"chapter":77,"verse":7,"text":"77|7|tīrccayāyuṁ niṅṅaḷēāṭ tākkīt ceyyappeṭunna kāryaṁ sambhavikkunnatu tanneyākunnu"},{"chapter":77,"verse":8,"text":"77|8|nakṣatraṅṅaḷuṭe prakāśaṁ māykkappeṭukayuṁ"},{"chapter":77,"verse":9,"text":"77|9|ākāśaṁ piḷarttappeṭukayuṁ"},{"chapter":77,"verse":10,"text":"77|10|parvvataṅṅaḷ peāṭikkappeṭukayuṁ"},{"chapter":77,"verse":11,"text":"77|11|dūtanmārkk samayaṁ nirṇayiccu keāṭukkappeṭukayuṁ ceytāl"},{"chapter":77,"verse":12,"text":"77|12|ēteāru divasattēkkāṇ avarkk avadhi niścayikkappeṭṭirikkunnat‌"},{"chapter":77,"verse":13,"text":"77|13|tīrumānattinṟe divasattēkk‌"},{"chapter":77,"verse":14,"text":"77|14|ā tīrumānattinṟe divasaṁ entāṇenn ninakkaṟiyumēā"},{"chapter":77,"verse":15,"text":"77|15|annē divasaṁ niṣēdhiccu taḷḷiyavarkkākunnu nāśaṁ"},{"chapter":77,"verse":16,"text":"77|16|pūrvvikanmāre nāṁ naśippiccu kaḷaññillē"},{"chapter":77,"verse":17,"text":"77|17|pinnīṭ pingāmikaḷeyuṁ avaruṭe pinnāle nāṁ ayakkunnatāṇ‌"},{"chapter":77,"verse":18,"text":"77|18|aprakāramāṇ nāṁ kuṟṟavāḷikaḷekkeāṇṭ pravarttikkuka"},{"chapter":77,"verse":19,"text":"77|19|annē divasaṁ niṣēdhiccu taḷḷiyavarkkāyirikkuṁ nāśaṁ"},{"chapter":77,"verse":20,"text":"77|20|nis'sārappeṭṭa oru drāvakattil ninn niṅṅaḷe nāṁ sr̥ṣṭiccillē"},{"chapter":77,"verse":21,"text":"77|21|enniṭṭ nāṁ atine bhadramāya oru saṅkētattil veccu"},{"chapter":77,"verse":22,"text":"77|22|niścitamāya oru avadhi vare"},{"chapter":77,"verse":23,"text":"77|23|aṅṅane nāṁ (ellāṁ) nirṇayiccu. appēāḷ nāṁ etra nalla nirṇayakkāran"},{"