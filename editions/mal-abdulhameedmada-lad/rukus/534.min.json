{"rukus":[{"chapter":92,"verse":1,"text":"92|1|rāvinetanneyāṇa satyaṁ ; at mūṭikeāṇṭirikkumpēāḷ"},{"chapter":92,"verse":2,"text":"92|2|pakaline tanneyāṇa satyaṁ ; at pratyakṣappeṭumpēāḷ"},{"chapter":92,"verse":3,"text":"92|3|āṇineyuṁ peṇṇineyuṁ sr̥ṣṭicca rītiye tanneyāṇa satyaṁ"},{"chapter":92,"verse":4,"text":"92|4|tīrccayāyuṁ niṅṅaḷuṭe pariśramaṁ vibhinna rūpattiluḷḷatākunnu"},{"chapter":92,"verse":5,"text":"92|5|ennāl ēteārāḷ dānaṁ nalkukayuṁ, sūkṣmata pālikkukayuṁ"},{"chapter":92,"verse":6,"text":"92|6|ēṟṟavuṁ uttamamāyatine satyappeṭuttukayuṁ ceytuvēā"},{"chapter":92,"verse":7,"text":"92|7|avannu nāṁ ēṟṟavuṁ eḷuppamāyatilēkk sekaryappeṭutti keāṭukkunnatāṇ‌"},{"chapter":92,"verse":8,"text":"92|8|ennāl ār piśukku kāṇikkukayuṁ, svayaṁ paryāptata naṭikkukayuṁ"},{"chapter":92,"verse":9,"text":"92|9|ēṟṟavuṁ uttamamāyatine niṣēdhiccu taḷḷukayuṁ ceytuvēā"},{"chapter":92,"verse":10,"text":"92|10|avannu nāṁ ēṟṟavuṁ ñerukkamuḷḷatilēkk sekaryameārukkikeāṭukkunnatāṇ‌"},{"chapter":92,"verse":11,"text":"92|11|avan nāśattil patikkumpēāḷ avanṟe dhanaṁ avann prayēājanappeṭunnatalla"},{"chapter":92,"verse":12,"text":"92|12|tīrccayāyuṁ mārgadarśanaṁ nam'muṭe bādhyatayākunnu"},{"chapter":92,"verse":13,"text":"92|13|tīrccayāyuṁ namukkuḷḷatākunnu paralēākavuṁ ihalēākavuṁ"},{"chapter":92,"verse":14,"text":"92|14|atināl āḷikkattikkeāṇṭirikkunna agniyeppaṟṟi ñān niṅṅaḷkk tākkīt nalkiyirikkunnu"},{"chapter":92,"verse":15,"text":"92|15|ēṟṟavuṁ duṣṭanāya vyaktiyallāte atil pravēśikkukayilla"},{"chapter":92,"verse":16,"text":"92|16|niṣēdhiccu taḷḷukayuṁ, pintiriññu kaḷayukayuṁ (vyakti)"},{"chapter":92,"verse":17,"text":"92|17|ēṟṟavuṁ sūkṣmatayuḷḷa vyakti atil ninn akaṟṟi nirttappeṭunnatāṇ‌"},{"chapter":92,"verse":18,"text":"92|18|pariśud'dhinēṭuvānāyi tanṟe dhanaṁ nalkunna (vyakti)"},{"chapter":92,"verse":19,"text":"92|19|pratyupakāraṁ nalkappeṭēṇṭatāya yāteāru anugrahavuṁ avanṟe pakkal orāḷkkumilla"},{"chapter":92,"verse":20,"text":"92|20|tanṟe atyunnatanāya rakṣitāvinṟe prīti tēṭuka ennat