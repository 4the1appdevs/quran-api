{"maqras":[{"chapter":84,"verse":1,"text":"84|1|ākāśaṁ piḷarumpēāḷ"},{"chapter":84,"verse":2,"text":"84|2|at atinṟe rakṣitāvin kīḻpeṭukayuṁ ceyyumpēāḷ-at (aṅṅane kīḻpeṭān) kaṭappeṭṭirikkunnutānuṁ"},{"chapter":84,"verse":3,"text":"84|3|bhūmi nīṭṭappeṭumpēāḷ"},{"chapter":84,"verse":4,"text":"84|4|atiluḷḷat at (puṟattēkk‌) iṭukayuṁ, at kāliyāyittīrukayuṁ ceyyumpēāḷ"},{"chapter":84,"verse":5,"text":"84|5|atinṟe rakṣitāvin at kīḻpeṭukayuṁ ceyyumpēāḷ- at (aṅṅane kīḻpeṭān) kaṭappeṭṭirikkunnu tānuṁ"},{"chapter":84,"verse":6,"text":"84|6|hē, manuṣyā, nī ninṟe rakṣitāviṅkalēkk kaṭutta ad'dhvānaṁ naṭatti cellunnavanuṁ aṅṅane avanumāyi kaṇṭumuṭṭunnavanumākunnu"},{"chapter":84,"verse":7,"text":"84|7|ennāl (paralēākatt‌) ēteāruvann tanṟe rēkha valatukaiyyil nalkappeṭṭuvēā"},{"chapter":84,"verse":8,"text":"84|8|avan laghuvāya vicāraṇaykk (mātraṁ) vidhēyanākunnatāṇ‌"},{"chapter":84,"verse":9,"text":"84|9|avan avanṟe svantakkāruṭe aṭuttēkk santuṣṭanāyikkeāṇṭ tiriccupēākukayuṁ ceyyuṁ"},{"chapter":84,"verse":10,"text":"84|10|ennāl ēteāruvan tanṟe rēkha avanṟe mutukinṟe pinnilūṭe keāṭukkappeṭṭuvēā"},{"chapter":84,"verse":11,"text":"84|11|avan nāśamē enn nilaviḷikkukayuṁ"},{"chapter":84,"verse":12,"text":"84|12|āḷikkattunna narakāgniyil kaṭann eriyukayuṁ ceyyuṁ"},{"chapter":84,"verse":13,"text":"84|13|tīrccayāyuṁ avan avanṟe svantakkārkkiṭayil santēāṣattēāṭe kaḻiyunnavanāyirunnu"},{"chapter":84,"verse":14,"text":"84|14|tīrccayāyuṁ avan dhariccu; avan maṭaṅṅi varunnatē alla enn‌"},{"chapter":84,"verse":15,"text":"84|15|ate, tīrccayāyuṁ avanṟe rakṣitāv avaneppaṟṟi kaṇṭaṟiyunnavanāyirikkunnu"},{"chapter":84,"verse":16,"text":"84|16|ennāl astamayaśēābhayekkeāṇṭ ñān satyaṁ ceytu paṟayunnu"},{"chapter":84,"verse":17,"text":"84|17|rātriyuṁ atu onnicc cērkkunnavayuṁ keāṇṭuṁ"},{"chapter":84,"verse":18,"text":"84|18|candran pūrṇṇata prāpikkumpēāḷ atine keāṇṭuṁ"},{"chapter":84,"verse":19,"text":"84|19|tīrccayāyuṁ niṅṅaḷ ghaṭṭaṅghaṭṭamāyi kayaṟikkeāṇṭirikkunnatāṇ‌"},{"chapter":84,"verse":20,"text":"84|20|ennāl avarkkentupaṟṟi? avar viśvasikkunnilla"},{"chapter":84,"verse":21,"text":"84|21|avarkk khur'ān ōtikeāṭukkappeṭṭāl avar sujūd ceyyunnumilla"},{"chapter":84,"verse":22,"text":"84|22|pakṣe aviśvāsikaḷ niṣēdhiccu taḷḷukayāṇ‌"},{"chapter":84,"verse":23,"text":"84|23|avar manas'sukaḷil sūkṣicc vekkunnatineppaṟṟi allāhu nallavaṇṇaṁ aṟiyunnavanākunnu"},{"chapter":84,"verse":24,"text":"84|24|ākayāl (nabiyē,) nī avarkk vēdanayēṟiya oru śikṣayeppaṟṟi santēāṣavārtta aṟiyikkuka"},{"chapter":84,"verse":25,"text":"84|25|viśvasikkukayuṁ salkarm'maṅṅaḷ pravarttikkukayuṁ ceytavarkkeāḻike. avarkk muṟiññu pēākātta pratiphalamuṇṭ‌"},{"chapter":85,"verse":1,"text":"85|1|nakṣatramaṇḍalaṅṅaḷuḷḷa ākāśaṁ tanneyāṇa satyaṁ"},{"chapter":85,"verse":2,"text":"85|2|vāgdānaṁ ceyyappeṭṭa ā divasaṁ tanneyāṇa satyaṁ"},{"chapter":85,"verse":3,"text":"85|3|sākṣiyuṁ sākṣyaṁ vahikkappeṭunna kāryavuṁ tanneyāṇa satyaṁ"},{"chapter":85,"verse":4,"text":"85|4|ā kiṭaṅṅinṟe āḷkkār naśiccu pēākaṭṭe"},{"chapter":85,"verse":5,"text":"85|5|atāyat viṟaku niṟacca tīyuṭe āḷkkār"},{"chapter":85,"verse":6,"text":"85|6|avar atiṅkal irikkunnavarāyirunna sandarbhaṁ"},{"chapter":85,"verse":7,"text":"85|7|satyaviśvāsikaḷekkeāṇṭ taṅṅaḷ ceyyunnatin avar dr̥k‌sākṣikaḷāyirunnu"},{"chapter":85,"verse":8,"text":"85|8|pratāpaśāliyuṁ stutyarhanumāya allāhuvil avar viśvasikkunnu ennat mātramāyirunnu avaruṭe (satyaviśvāsikaḷuṭe) mēl avar (marddakar) cumattiya kuṟṟaṁ"},{"chapter":85,"verse":9,"text":"85|9|ākāśaṅṅaḷuṭeyuṁ bhūmiyuṭeyuṁ mēl ādhipatyaṁ uḷḷavanumāya (allāhuvil). allāhu ellākāryattinuṁ sākṣiyākunnu"},{"chapter":85,"verse":10,"text":"85|10|satyaviśvāsikaḷeyuṁ satyaviśvāsinikaḷeyuṁ marddikkukayuṁ, pinnīṭ paścāttapikkātirikkukayuṁ ceytavarārēā avarkku narakaśikṣayuṇṭ‌. tīrcca. avarkk cuṭṭukarikkunna śikṣayuṇṭ‌"},{"chapter":85,"verse":11,"text":"85|11|viśvasikkukayuṁ salkarm'maṅṅaḷ pravarttikkukayuṁ ceytavarārēā avarkk tāḻbhāgattukūṭi aruvikaḷ oḻukunna svargattēāppukaḷuṇṭ‌; tīrcca. atatre valiya vijayaṁ"},{"chapter":85,"verse":12,"text":"85|12|tīrccayāyuṁ ninṟe rakṣitāvinṟe piṭuttaṁ kaṭhinamāyat tanneyākunnu"},{"chapter":85,"verse":13,"text":"85|13|tīrccayāyuṁ avan tanneyāṇ ādyamāyi uṇṭākkunnatuṁ āvartticc uṇṭākkunnatuṁ"},{"chapter":85,"verse":14,"text":"85|14|avan ēṟe peāṟukkunnavanuṁ ēṟe snēhamuḷḷavanuṁ"},{"chapter":85,"verse":15,"text":"85|15|sinhāsanattinṟe uṭamayuṁ, mahatvamuḷḷavanuṁ"},{"chapter":85,"verse":16,"text":"85|16|tān uddēśikkunnatentēā at tikaccuṁ prāvarttikamākkunnavanumāṇ‌"},{"chapter":85,"verse":17,"text":"85|17|ā sain'yaṅṅaḷuṭe varttamānaṁ ninakk vannukiṭṭiyirikkunnēā"},{"chapter":85,"verse":18,"text":"85|18|athavā phir'aunṟeyuṁ thamūdinṟeyuṁ (varttamānaṁ)"},{"chapter":85,"verse":19,"text":"85|19|alla, satyaniṣēdhikaḷ niṣēdhiccu taḷḷunnatilākunnu ērpeṭṭiṭṭuḷḷat‌"},{"chapter":85,"verse":20,"text":"85|20|allāhu avaruṭe pinvaśattukūṭi (avare) valayaṁ ceytukeāṇṭirikkunnavanākunnu"},{"chapter":85,"verse":21,"text":"85|21|alla, at mahatvamēṟiya oru khur'ānākunnu"},{"chapter":85,"verse":22,"text":"85|22|sanrakṣitamāya oru phalakattilāṇ atuḷḷat‌"},{"chapter":86,"verse":1,"text":"86|1|ākāśaṁ tanneyāṇa, rātriyil varunnatu tanneyāṇa satyaṁ"},{"chapter":86,"verse":2,"text":"86|2|rātriyil varunnat ennāl entāṇenn ninakkaṟiyumēā"},{"chapter":86,"verse":3,"text":"86|3|tuḷacc kayaṟunna nakṣatramatre at‌"},{"chapter":86,"verse":4,"text":"86|4|tanṟe kāryattil oru mēlnēāṭṭakkāranuṇṭāyikkeāṇṭallāte yāteārāḷumilla"},{"chapter":86,"verse":5,"text":"86|5|ennāl manuṣyan cinticcu nēākkaṭṭe tān entil ninnāṇ sr̥ṣṭikkappeṭṭirikkunnat enn‌"},{"chapter":86,"verse":6,"text":"86|6|teṟiccu vīḻunna oru drāvakattil ninnatre avan sr̥ṣṭikkappeṭṭirikkunnat‌"},{"chapter":86,"verse":7,"text":"86|7|mutukellinuṁ, vāriyellukaḷkkumiṭayil ninn at puṟattu varunnu"},{"chapter":86,"verse":8,"text":"86|8|avane (manuṣyane) tiriccukeāṇṭu varān tīrccayāyuṁ avan (allāhu) kaḻivuḷḷavanākunnu"},{"chapter":86,"verse":9,"text":"86|9|rahasyaṅṅaḷ pariśēādhikkappeṭunna divasaṁ"},{"chapter":86,"verse":10,"text":"86|10|a