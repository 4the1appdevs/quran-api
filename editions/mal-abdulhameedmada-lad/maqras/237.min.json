{"maqras":[{"chapter":87,"verse":1,"text":"87|1|atyunnatanāya ninṟe rakṣitāvinṟe nāmaṁ prakīrttikkuka"},{"chapter":87,"verse":2,"text":"87|2|sr̥ṣṭikkukayuṁ, sanvidhānikkukayuṁ ceyta (rakṣitāvinṟe)"},{"chapter":87,"verse":3,"text":"87|3|vyavastha nirṇayiccu mārgadarśanaṁ nalkiyavanuṁ"},{"chapter":87,"verse":4,"text":"87|4|mēccil puṟaṅṅaḷ ulpādippiccavanuṁ"},{"chapter":87,"verse":5,"text":"87|5|enniṭṭ atine uṇaṅṅikkariñña cavaṟākki tīrttavanumāya (rakṣitāvinṟe nāmaṁ)"},{"chapter":87,"verse":6,"text":"87|6|ninakk nāṁ ōtittarāṁ. nī maṟannupēākukayilla"},{"chapter":87,"verse":7,"text":"87|7|allāhu uddēśiccateāḻike. tīrccayāyuṁ avan parasyamāyatuṁ, rahasyamāyirikkunnatuṁ aṟiyunnu"},{"chapter":87,"verse":8,"text":"87|8|kūṭutal eḷuppamuḷḷatilēkk ninakk nāṁ sekaryamuṇṭākkittarunnatumāṇ‌"},{"chapter":87,"verse":9,"text":"87|9|atināl upadēśaṁ phalappeṭunnuveṅkil nī upadēśiccu keāḷḷuka"},{"chapter":87,"verse":10,"text":"87|10|bhayappeṭunnavar upadēśaṁ svīkariccu keāḷḷunnatāṇ‌"},{"chapter":87,"verse":11,"text":"87|11|ēṟṟavuṁ nirbhāgyavānāyiṭṭuḷḷavan atine (upadēśatte) viṭṭakannu pēākunnatāṇ‌"},{"chapter":87,"verse":12,"text":"87|12|valiya agniyil kaṭann eriyunnavanatre avan"},{"chapter":87,"verse":13,"text":"87|13|pinnīṭ avan atil marikkukayilla. jīvikkukayumilla"},{"chapter":87,"verse":14,"text":"87|14|tīrccayāyuṁ pariśud'dhi nēṭiyavar vijayaṁ prāpiccu"},{"chapter":87,"verse":15,"text":"87|15|tanṟe rakṣitāvinṟe nāmaṁ smarikkukayuṁ enniṭṭ namaskarikkukayuṁ (ceytavan)"},{"chapter":87,"verse":16,"text":"87|16|pakṣe, niṅṅaḷ aihikajīvitattinn kūṭutal prādhān'yaṁ nalkunnu"},{"chapter":87,"verse":17,"text":"87|17|paralēākamākunnu ēṟṟavuṁ uttamavuṁ nilanilkkunnatuṁ"},{"chapter":87,"verse":18,"text":"87|18|tīrccayāyuṁ it ādyatte ēṭukaḷil tanneyuṇṭ‌"},{"chapter":87,"verse":19,"text":"87|19|atāyat ibrāhīminṟeyuṁ mūsāyuṭeyuṁ ēṭukaḷil"},{"chapter":88,"verse":1,"text":"88|1|(nabiyē,) ā mūṭunna sambhavatte sambandhicca varttamānaṁ ninakk vannukiṭṭiyēā"},{"chapter":88,"verse":2,"text":"88|2|annē divasaṁ cila mukhaṅṅaḷ tāḻmakāṇikkunnatuṁ"},{"chapter":88,"verse":3,"text":"88|3|paṇiyeṭutt kṣīṇiccatumāyirikkuṁ"},{"chapter":88,"verse":4,"text":"88|4|cūṭēṟiya agniyil ava pravēśikkunnatāṇ‌"},{"chapter":88,"verse":5,"text":"88|5|cuṭṭutiḷakkunna oru uṟavil ninn avarkku kuṭippikkappeṭunnatāṇ‌"},{"chapter":88,"verse":6,"text":"88|6|ḷarī'il ninnallāte avarkk yāteāru āhāravumilla"},{"chapter":88,"verse":7,"text":"88|7|at pēāṣaṇaṁ nalkukayilla. viśappin śamanamuṇṭākkukayumilla"},{"chapter":88,"verse":8,"text":"88|8|cila mukhaṅṅaḷ annu tuṭuttu minuttatāyirikkuṁ"},{"chapter":88,"verse":9,"text":"88|9|avayuṭe prayatnatteppaṟṟi tr̥ptiyaṭaññavayumāyirikkuṁ"},{"chapter":88,"verse":10,"text":"88|10|unnatamāya svargattil"},{"chapter":88,"verse":11,"text":"88|11|aviṭe yāteāru nirart'thakamāya vākkuṁ avar kēḷkkukayilla"},{"chapter":88,"verse":12,"text":"88|12|atil oḻuki keāṇṭirikkunna aruviyuṇṭ‌"},{"chapter":88,"verse":13,"text":"88|13|atil uyarttivekkappeṭṭa kaṭṭilukaḷuṁ"},{"chapter":88,"verse":14,"text":"88|14|tayyāṟākki vekkappeṭṭa kēāppakaḷuṁ"},{"chapter":88,"verse":15,"text":"88|15|aṇiyāyi vekkappeṭṭa talayaṇakaḷuṁ"},{"chapter":88,"verse":16,"text":"88|16|viriccuvekkappeṭṭa paravatānikaḷumuṇṭ‌"},{"chapter":88,"verse":17,"text":"88|17|oṭṭakattinṟe nērkk avar nēākkunnillē? at eṅṅane sr̥ṣṭikkappeṭṭirikkunnu enn‌"},{"chapter":88,"verse":18,"text":"88|18|ākāśattēkk (avar nēākkunnillē?) at eṅṅane uyarttappeṭṭirikkunnu enn‌"},{"chapter":88,"verse":19,"text":"88|19|parvvataṅṅaḷilēkk (avar nēākkunnillē?) ava eṅṅane nāṭṭinirttappeṭṭirikkunnu venn‌"},{"chapter":88,"verse":20,"text":"88|20|bhūmiyilēkk (avar nēākkunnillē?) at eṅṅane parattappeṭṭirikkunnuvenn‌"},{"chapter":88,"verse":21,"text":"88|21|atināl (nabiyē,) nī ulbēādhippikkuka. nī oru ulbēādhakan mātramākunnu"},{"chapter":88,"verse":22,"text":"88|22|nī avaruṭe mēl adhikāraṁ celuttēṇṭavanalla"},{"chapter":88,"verse":23,"text":"88|23|pakṣe, vallavanuṁ tiriññukaḷayukayuṁ, aviśvasikkukayuṁ ceyyunna pakṣaṁ"},{"chapter":88,"verse":24,"text":"88|24|allāhu avane ēṟṟavuṁ valiya śikṣa śikṣikkunnatāṇ‌"},{"chapter":88,"verse":25,"text":"88|25|tīrccayāyuṁ nam'muṭe aṭuttēkkāṇ avaruṭe maṭakkaṁ"},{"chapter":88,"verse":26,"text":"88|26|pinnīṭ‌, tīrccayāyuṁ nam'muṭe bādhyatayāṇ avaruṭe vicāraṇa"},{"chapter":89,"verse":1,"text":"89|1|prabhātaṁ tanneyāṇa satyaṁ"},{"chapter":89,"verse":2,"text":"89|2|pattu rātrikaḷ tanneyāṇa satyaṁ"},{"chapter":89,"verse":3,"text":"89|3|iraṭṭayuṁ oṟṟayuṁ tanneyāṇa satyaṁ"},{"chapter":89,"verse":4,"text":"89|4|rātri sañcaricc keāṇṭirikke at tanneyāṇa satyaṁ"},{"chapter":89,"verse":5,"text":"89|5|atil (mēl paṟaññavayil) kāryabēādhamuḷḷavann satyattin vakayuṇēṭā"},{"chapter":89,"verse":6,"text":"89|6|ād samudāyatte keāṇṭ ninṟe rakṣitāv entu ceytuvenn nī kaṇṭillē"},{"chapter":89,"verse":7,"text":"89|7|atāyat tūṇukaḷuṭe uṭamakaḷāya iṟaṁ gēātratte keāṇṭ‌"},{"chapter":89,"verse":8,"text":"89|8|tattulyamāyiṭṭeānn rājyaṅṅaḷil sr̥ṣṭikkappeṭṭiṭṭillātta gēātraṁ"},{"chapter":89,"verse":9,"text":"89|9|tāḻ‌varayil pāṟaveṭṭi keṭṭiṭamuṇṭākkiyavarāya thamūd gēātrattekkeāṇṭuṁ"},{"chapter":89,"verse":10,"text":"89|10|āṇikaḷuṭe āḷāya phir'aunekkeāṇṭuṁ"},{"chapter":89,"verse":11,"text":"89|11|nāṭukaḷil atikramaṁ pravarttikkukayuṁ"},{"chapter":89,"verse":12,"text":"89|12|aviṭe kuḻappaṁ vard'dhippikkukayuṁ ceytavarāṇavar"},{"chapter":89,"verse":13,"text":"89|13|atināl ninṟe rakṣitāv avaruṭe mēl śikṣayuṭe cam'maṭṭi varṣiccu"},{"chapter":89,"verse":14,"text":"89|14|tīrccayāyuṁ ninṟe rakṣitāv patiyirikkunna sthānattu tanneyuṇṭ‌"},{"chapter":89,"verse":15,"text":"89|15|ennāl manuṣyane avanṟe rakṣitāv parīkṣikkukayuṁ aṅṅane avane ādarikkukayuṁ avan sekhyaṁ nalkukayuṁ ceytāl avan paṟayuṁ; enṟe rakṣitāv enne ādariccirikkunnu enn‌"},{"chapter":89,"verse":16,"text":"89|16|ennāl avane (manuṣyane) avan parīkṣikkukayuṁ enniṭṭavanṟe upajīvanaṁ iṭuṅṅiyatākkukayuṁ ceytāl avan paṟayuṁ; enṟe rakṣitāv enne apamāniccirikkunnu enn‌"},{"chapter":89,"verse":17,"text":"89|17|alla, pakṣe niṅṅaḷ anāthaye ādarikkunnilla"},