{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "82|1|ākāśaṁ peāṭṭi piḷarumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "82|2|nakṣatraṅṅaḷ keāḻiññu vīḻumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "82|3|samudraṅṅaḷ peāṭṭi oḻukumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "82|4|khab‌ṟukaḷ iḷakkimaṟikkappeṭumpēāḷ"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "82|5|ōrēā vyaktiyuṁ tān munkūṭṭi ceytu veccatuṁ pinnēāṭṭ mēṟṟīvccatuṁ entāṇenn aṟiyunnatāṇ‌"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "82|6|hē; manuṣyā, udāranāya ninṟe rakṣitāvinṟe kāryattil ninne vañciccu kaḷaññatentāṇ‌"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "82|7|ninne sr̥ṣṭikkukayuṁ, ninne sanvidhānikkukayuṁ , ninne śariyāya avasthayilākkukayuṁ ceytavanatre avan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "82|8|tān uddēśicca rūpattil ninne saṅghaṭippiccavan"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "82|9|alla; pakṣe, pratiphala naṭapaṭiye niṅṅaḷ niṣēdhiccu taḷḷunnu"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "82|10|tīrccayāyuṁ niṅṅaḷuṭe mēl cila mēlnēāṭṭakkāruṇṭ‌"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "82|11|rēkhappeṭuttivekkunna cila mān'yanmār"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "82|12|niṅṅaḷ pravarttikkunnat avar aṟiyunnu"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "82|13|tīrccayāyuṁ sukr̥tavānmār sukhānubhavattil tanneyāyirikkuṁ"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "82|14|tīrccayāyuṁ durmārgikaḷ jvalikkunna narakāgniyil tanneyāyirikkuṁ"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "82|15|pratiphalattinṟe nāḷil avaratil kaṭann eriyunnatāṇ‌"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "82|16|avarkk atil ninn māṟi nilkkānāvilla"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "82|17|pratiphalanaṭapaṭiyuṭe divasaṁ ennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "82|18|vīṇṭuṁ; pratiphalanaṭapaṭiyuṭe divasaṁ ennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "82|19|orāḷkkuṁ maṟṟeārāḷkku vēṇṭi yāteānnuṁ adhīnappeṭuttānāvātta oru divasaṁ. annē divasaṁ kaikāryakarttr̥tvaṁ allāhuvinnāyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "83|1|aḷavil kuṟakkunnavarkk mahānāśaṁ"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "83|2|atāyat janaṅṅaḷēāṭ aḷannuvāṅṅukayāṇeṅkil tikacceṭukkukayuṁ"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "83|3|janaṅṅaḷkk aḷannukeāṭukkukayēā tūkkikeāṭukkukayēā āṇeṅkil naṣṭaṁ varuttukayuṁ ceyyunnavarkk‌"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "83|4|akkūṭṭar vicārikkunnillē; taṅṅaḷ eḻunnēlpikkappeṭunnavarāṇenn‌"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "83|5|bhayaṅkaramāya oru divasattināyiṭṭ‌"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "83|6|ate, lēākarakṣitāviṅkalēkk janaṅṅaḷ eḻunnēṟṟ varunna divasaṁ"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "83|7|nis'sanśayaṁ; durmārgikaḷuṭe rēkha sijjīnil tanneyāyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "83|8|sijjīn ennāl entāṇenn ninakkaṟiyāmēā"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "83|9|eḻutappeṭṭa oru granthamākunnu at‌"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "83|10|annē divasaṁ niṣēdhiccu taḷḷunnavarkkākunnu nāśaṁ"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "83|11|atāyat pratiphala naṭapaṭiyuṭe divasatte niṣēdhiccu taḷḷunnavarkk‌"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "83|12|ellā atiruviṭṭavanuṁ mahāpāpiyumāyiṭṭuḷḷavanallāte atine niṣēdhiccu taḷḷukayilla"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "83|13|avann nam'muṭe dr̥ṣṭāntaṅṅaḷ ōtikēḷpikkappeṭukayāṇeṅkil avan paṟayuṁ; pūrvvikanmāruṭe aitihyaṅṅaḷāṇenn‌"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "83|14|alla; pakṣe, avar pravartticcukkeāṇṭirikkunnat avaruṭe hr̥dayaṅṅaḷil kaṟayuṇṭākkiyirikkunnu"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "83|15|alla; tīrccayāyuṁ avar annē divasaṁ avaruṭe rakṣitāvil ninn maṟaykkappeṭunnavarākunnu"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "83|16|pinnīṭavar jvalikkunna narakāgniyil kaṭanneriyunnavarākunnu"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "83|17|pinnīṭ paṟayappeṭuṁ; itāṇ niṅṅaḷ niṣēdhiccutaḷḷikkeāṇṭirunna kāryaṁ"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "83|18|nis'sanśayaṁ; puṇyavānmāruṭe rēkha illiyyūnil tanneyāyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "83|19|illiyyūn ennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "83|20|eḻutappeṭṭa oru rēkhayatre at‌"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "83|21|sāmīpyaṁ sid'dhiccavar atinṟe aṭukkal sannihitarākunnatāṇ‌"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "83|22|tīrccayāyuṁ sukr̥tavānmār sukhānubhavattil tanneyāyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "83|23|sēāphakaḷilirunn avar nēākkikkeāṇṭirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "83|24|avaruṭe mukhaṅṅaḷil sukhānubhavattinṟe tiḷakkaṁ ninakkaṟiyāṁ"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "83|25|mudravekkappeṭṭa śud'dhamāya madyattil ninn avarkk kuṭikkān nalkappeṭuṁ"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "83|26|atinṟe mudra kastūriyāyirikkuṁ. vāśi kāṇikkunnavar atin vēṇṭi vāśi kāṇikkaṭṭe"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "83|27|atile cēruva tasnīṁ āyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "83|28|atāyat sāmīpyaṁ sid'dhiccavar kuṭikkunna oru uṟav jalaṁ"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "83|29|tīrccayāyuṁ kuṟṟakr̥tyattil ērpeṭṭavar satyaviśvāsikaḷe kaḷiyākki cirikkumāyirunnu"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "83|30|avaruṭe (satyaviśvāsikaḷuṭe) mumpilūṭe kaṭannu pēākumpēāḷ avar parasparaṁ kaṇṇiṭṭu kāṇikkumāyirunnu"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "83|31|avaruṭe svantakkāruṭe aṭukkalēkk tiriccucellumpēāḷ rasiccu keāṇṭ avar tiriccucellumāyirunnu"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "83|32|avare (satyaviśvāsikaḷe) avar kāṇumpēāḷ, tīrccayāyuṁ ikkūṭṭar vaḻipiḻaccavar tanneyāṇ enn avar paṟayukayuṁ ceyyumāyirunnu"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "83|33|avaruṭe (satyaviśvāsikaḷuṭe) mēl mēlnēāṭṭakkārāyiṭṭ avar niyēāgikkappeṭṭiṭṭeānnumilla"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "83|34|ennāl ann (khiyāmatt nāḷil) ā satyaviśvāsikaḷ satyaniṣēdhikaḷe kaḷiyākki cirikkunnatāṇ‌"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "83|35|sēāphakaḷilirunn avar nēākkikkeāṇṭirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "83|36|satyaniṣēdhikaḷ ceytu keāṇṭirunnatin avarkk pratiphalaṁ nalkappeṭṭuvēā enn‌"
        }
    ]
