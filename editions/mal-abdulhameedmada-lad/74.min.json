{"chapter":[{"chapter":74,"verse":1,"text":"74|1|hē, putaccu mūṭiyavanē"},{"chapter":74,"verse":2,"text":"74|2|eḻunnēṟṟ (janaṅṅaḷe) tākkīt ceyyuka"},{"chapter":74,"verse":3,"text":"74|3|ninṟe rakṣitāvine mahatvappeṭuttukayuṁ"},{"chapter":74,"verse":4,"text":"74|4|ninṟe vastraṅṅaḷ śud'dhiyākkukayuṁ"},{"chapter":74,"verse":5,"text":"74|5|pāpaṁ veṭiyukayuṁ ceyyuka"},{"chapter":74,"verse":6,"text":"74|6|kūṭutal nēṭṭaṁ keāticcu keāṇṭ nī audāryaṁ ceyyarut‌"},{"chapter":74,"verse":7,"text":"74|7|ninṟe rakṣitāvinu vēṇṭi nī kṣama kaikkeāḷḷuka"},{"chapter":74,"verse":8,"text":"74|8|ennāl kāhaḷattil muḻakkappeṭṭāl"},{"chapter":74,"verse":9,"text":"74|9|ann at oru prayāsakaramāya divasamāyirikkuṁ"},{"chapter":74,"verse":10,"text":"74|10|satyaniṣēdhikaḷkk eḷuppamuḷḷatallātta oru divasaṁ"},{"chapter":74,"verse":11,"text":"74|11|enneyuṁ ñān ēkanāyikkeāṇṭ sr̥ṣṭicca oruttaneyuṁ viṭṭēkkuka"},{"chapter":74,"verse":12,"text":"74|12|avann ñān samr̥d'dhamāya sampatt uṇṭākki keāṭukkukayuṁ ceytu"},{"chapter":74,"verse":13,"text":"74|13|sannad'dharāyi nilkkunna santatikaḷeyuṁ"},{"chapter":74,"verse":14,"text":"74|14|avannu ñān nalla sekaryaṅṅaḷ ceytu keāṭukkukayuṁ ceytu"},{"chapter":74,"verse":15,"text":"74|15|pinneyuṁ ñān kūṭutal keāṭukkaṇamenn avan mēāhikkunnu"},{"chapter":74,"verse":16,"text":"74|16|alla, tīrccayāyuṁ avan nam'muṭe dr̥ṣṭāntaṅṅaḷēāṭ mātsaryaṁ kāṇikkunnavanāyirikkunnu"},{"chapter":74,"verse":17,"text":"74|17|prayāsamuḷḷa oru kayaṟṟaṁ kayaṟān nāṁ vaḻiye avane nirbandhikkunnatāṇ‌"},{"chapter":74,"verse":18,"text":"74|18|tīrccayāyuṁ avaneānnu cinticcu, avaneānnu kaṇakkākkukayuṁ ceytu"},{"chapter":74,"verse":19,"text":"74|19|atināl avan naśikkaṭṭe. eṅṅaneyāṇavan kaṇakkākkiyat‌"},{"chapter":74,"verse":20,"text":"74|20|vīṇṭuṁ avan naśikkaṭṭe, eṅṅaneyāṇavan kaṇakkākkiyat‌"},{"chapter":74,"verse":21,"text":"74|21|pinnīṭ avaneānnu nēākki"},{"chapter":74,"verse":22,"text":"74|22|pinne avan mukhaṁ cuḷikkukayuṁ mukhaṁ kaṟuppikkukayuṁ ceytu"},{"chapter":74,"verse":23,"text":"74|23|pinne