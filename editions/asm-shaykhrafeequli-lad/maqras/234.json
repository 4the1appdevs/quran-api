{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "80|1|Tē'ōm̐ birakta prakāśa karailē ārau mukha ghuraā'i la’lē"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "80|2|tē'ōm̐ra ōcarata andha byaktijana ahāra kāraṇē."
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "80|3|Kihē tōmāka janāba yē, haẏatō si paraiśud'dha ha’ba"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "80|4|athabā upadēśa grahaṇa karaiba ārau sē'i upadēśa tāra bābē lābhajanaka ha’ba."
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "80|5|Ārau yiẏē nijakē amukhāpēkṣī buli bhāraē"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "80|6|tumi tāra prati manōyōga dichā."
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "80|7|Athaca si paraiśud'dha naha’lē tōmāra kōnō dāẏitba nā'i"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "80|8|ānahātē yiẏē tōmāra ōcaralai daurai āhilē"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "80|9|ārau si (āllāhaka) bhaẏō karaē"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "80|10|tāra prati tumi udāsīna ha’lā."
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "80|11|Kētiẏā'ō nahaẏa, niścaẏa ē'iṭō upadēśa bāṇī"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "80|12|gatikē yiẏē icchā karaiba siẏē'i iẏāka smaraṇa raākhiba"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "80|13|ē'iṭō maryadā sampanna chahīphāta lipibad'dha."
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "80|14|Samunnata, paraitra"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "80|15|lēkhaka bā dūtasakalara hātata."
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "80|16|(Yisakala) mahāsanmānita, pūṇyabāna."
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "80|17|Mānuha dhbansa ha'ōm̐ka, kimāna yē akr̥tajña"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "80|18|tē'ōm̐ tāka ki bastura paraā sr̥ṣṭi karaichē"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "80|19|śukrabindura paraā, tē'ōm̐ tāka sr̥ṣṭi karaichē, pichata tāra paraimita bikāśa sādhana karaichē"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "80|20|tāra pichata tāra bābē patha sahaja karai dichē"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "80|21|tāra pichata tāka mr̥tyu pradāna karailē ārau kabarastha karailē."
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "80|22|Ākau yētiẏā tē'ōm̐ icchā karaiba tāka punarjīraita karaiba."
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "80|23|Kētiẏā'ō nahaẏa, tē'ōm̐ tāka yi ādēśa karaichila sēẏā si ētiẏā'ō pūrṇa karaā nā'i."
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "80|24|Ētēkē mānuhē nija khādyara prati lakṣya karaā ucita."
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "80|25|Niścaẏa āmi pracura paraimāṇē pānī barṣaṇa karaōm̐"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "80|26|Tāra pichata āmi pr̥thiraīka yathāyathabhāraē bidīrṇa karaōm̐"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "80|27|tāra pichata āmi tāta utpanna karaōm̐ śasya"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "80|28|āṅura ārau śāka-pācali"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "80|29|yāẏatuna ārau khējura gacha"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "80|30|ghana gacha-gachani biśiṣṭa udyāna"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "80|31|phala-mūla ārau tr̥ṇa-ghām̐ha"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "80|32|ē'ibōra tōmālōkara ārau tōmālōkara gharacīẏā jantura jīranōpakaraṇara bābē."
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "80|33|Ētēkē yētiẏā tīkṣna śabda āhiba"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "80|34|sē'idinā mānuhē palāẏana karaiba tāra bhātr̥ra paraā"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "80|35|ārau tāra māka-bāpēkara paraā"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "80|36|tāra straī ārau santānara paraā"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "80|37|sē'idinā siham̐ta pratyakaraē ha’ba ēnē ēka gurautara arasthā yiṭō tāka sampūrṇaraūpē byasta raākhiba."
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "80|38|Sē'idinā kichumāna cēhēraā ha’ba ujjbala"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "80|39|hām̐hiraē bharaā, ānandata utphulla"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "80|40|ārau sē'idinā kichumāna cēhēraā dhūliraē malina ha’ba"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "80|41|ka’lā āraraṇē ārarai dharaiba."
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "80|42|Ē'ōm̐lōkē'i kāphira, atyanta pāpī."
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "81|1|Sūryaka yētiẏā niṣprabha karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "81|2|ārau nakṣatraraāji yētiẏā khahi paraiba"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "81|3|parbatasamūhaka yētiẏā sañcālita karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "81|4|ārau yētiẏā pūrṇa gābhinī uṭabōraka ayatnē ērai diẏā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "81|5|ārau yētiẏā banaraīẏā paśubōraka ēkatraita karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "81|6|ārau yētiẏā sāgarasamūhaka agni'uttāla karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "81|7|ārau yētiẏā ātmāsamūhaka (samagōtraīẏasakalara lagata) milita karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "81|8|ārau yētiẏā jīranta samādhistha kan'yāśiśuka sōdhā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "81|9|ki aparaādhata tā'ika hatyā karaā haichila"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "81|10|ārau yētiẏā āmalanāmāsamūha unmōcita karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "81|11|ārau yētiẏā ākāśara āraraṇa apasāraita karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "81|12|ārau yētiẏā jāhānnāmaka bhīṣaṇabhāraē prajjbalita karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "81|13|ārau jānnātaka yētiẏā nikaṭabartī karaā ha’ba"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "81|14|tētiẏā pratyēka byaktiẏē'i jāniba si ki upasthita karaichē."
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "81|15|Ētēkē ma'i śapata karaichō ārartanaśīla nakṣatrabōrara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "81|16|yibōra gatiśīla, adr̥śya"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "81|17|ārau raātira śapata yētiẏā i bidāẏa laẏa"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "81|18|ārau prabhātara śapata yētiẏā iẏāra ābirbhāra haẏa"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "81|19|niścaẏa ē'i kōra'āna sanmānita raāchulē lai ahā bāṇī."
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "81|20|Yijana śaktiśālī, āraśbara mālikara ōcarata maryadāsampanna"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "81|21|mān'yabara, tāta tē'ōm̐ biśbasta."
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "81|22|Ārau tōmālōkara saṅgī unmāda nahaẏa"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "81|23|ārau tē'ōm̐ tē'ōm̐ka spaṣṭa digantata dēkhichē"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "81|24|Ārau tē'ōm̐ gāẏēbī biṣaẏa samparkē kr̥paṇāli'ō nakaraē."
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "81|25|Ārau ēẏā kōnō abhiśapta caẏatānaraō bākya nahaẏa."
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "81|26|Ētēkē tōmālōkē kōnaphālē gati karaichā"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "81|27|ē'iṭō kērala samagra jagatabāsīra bābē upadēśa bāṇī"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "81|28|tāra bābē, tōmālōkara mājara yiẏē sarala pathata caliba bicāraē."
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "81|29|Tōmālōkē icchā karaiba nōraāraā, yētiẏā laikē biśbajagatara pratipālaka āllāhē icchā nakaraē."
        }
    ]
}