{"rukus":[{"chapter":56,"verse":1,"text":"56|1|Yētiẏā kiẏāmata saṅghaṭita ha’ba"},{"chapter":56,"verse":2,"text":"56|2|(tētiẏā) iẏāra saṅghaṭanara asbīkārakāraī kōnō nāthākiba."},{"chapter":56,"verse":3,"text":"56|3|I kāraōbāka adhaḥpatana karaiba, kāraōbāka samunnata karaiba"},{"chapter":56,"verse":4,"text":"56|4|yētiẏā pr̥thiraī prabala prakampanēraē prakampita ha’ba"},{"chapter":56,"verse":5,"text":"56|5|ārau parbatasamūha cūrṇa-bicūrṇa hai paraiba"},{"chapter":56,"verse":6,"text":"56|6|phalata sē'ibōra bikṣipta dhūlikaṇāta paraiṇata ha’ba"},{"chapter":56,"verse":7,"text":"56|7|ārau tōmālōkē bibhakta hai paraibā tiniṭā dalata"},{"chapter":56,"verse":8,"text":"56|8|ētēkē sōm̐phālara dala; ārau sōm̐phālara dalaṭō kimāna yē saubhāgyabāna"},{"chapter":56,"verse":9,"text":"56|9|ārau bā'ōm̐phālara dala; ārau bā'ōm̐phālara dalaṭō kimāna yē durbhagīẏā"},{"chapter":56,"verse":10,"text":"56|10|ārau agragāmīsakalē'i agragāmī"},{"chapter":56,"verse":11,"text":"56|11|tē'ōm̐lōkē'i sānnidhyapraāpta"},{"chapter":56,"verse":12,"text":"56|12|tē'ōm̐lōka thākiba niẏāmatapūrṇa jānnātasamūhata"},{"chapter":56,"verse":13,"text":"56|13|bahusaṅkhyaka ha’ba pūrbarartīsakalara mājara paraā"},{"chapter":56,"verse":14,"text":"56|14|ārau kama saṅkhyaka ha’ba parabartīsakalara mājara paraā."},{"chapter":56,"verse":15,"text":"56|15|Sōṇēraē nirmita āsanamūhata"},{"chapter":56,"verse":16,"text":"56|16|siham̐tē parasparaē mukhāmukhikai ā'uji bahiba."},{"chapter":56,"verse":17,"text":"56|17|Siham̐tara āśē-pāśē ghuraiphuraiba cira kiśōrasakalē"},{"chapter":56,"verse":18,"text":"56|18|prabāhita nijaraāra suraāpūrṇa pānapātra ārau piẏalābōra lai"},{"chapter":56,"verse":19,"text":"56|19|sē'i suraā pāna karailē tē'ōm̐lōkara mūra nughuraāẏa ārau tē'ōm̐lōka jñānahāraā'ō naha’ba"},{"chapter":56,"verse":20,"text":"56|20|ārau (ghuraiphuraiba) tē'ōm̐lōkara pachandanīẏa phala-mūla lai"},{"chapter":56,"verse":21,"text":"56|21|ārau tē'ōm̐lōkara raucī anuyāẏī caraā'ira mānsa lai."},{"chapter":56,"verse":22,"text":"56|22|Ārau tē'ōm̐lōkara bābē thākiba mr̥ganaẏanī (ḍāṅara cakubiśiṣṭā) hura"},{"chapter":56,"verse":23,"text":"56|23|yēnibā siham̐ta surakṣita mukutāhē"},{"chapter":56,"verse":24,"text":"56|24|siham̐tē yi āmala karaichila tāra puraṣkārasbaraūpa."},{"chapter":56,"verse":25,"text":"56|25|Tāta siham̐tē kōnō alāgatīẏāla kathā ārau kōnō pāpabākya śunibalai nāpāba"},{"chapter":56,"verse":26,"text":"56|26|śuniba kērala chālāma ārau chālāma."},{"chapter":56,"verse":27,"text":"56|27|Ārau sōm̐phālara dala; kimāna yē bhāgyabāna sōm̐phālara dalaṭō"},{"chapter":56,"verse":28,"text":"56|28|Tē'ōm̐lōkē thākiba ēnē udyānata, ya’ta āchē kām̐iṭabihīna bagaraī gacha"},{"chapter":56,"verse":29,"text":"56|29|ārau thōkēraē bharaā kala gacha"},{"chapter":56,"verse":30,"text":"56|30|ārau samprasāraita chām̐"},{"chapter":56,"verse":31,"text":"56|31|ārau sadāẏa prabāhamāna pānī"},{"chapter":56,"verse":32,"text":"56|32|ārau pracura phala-mūla"},{"chapter":56,"verse":33,"text":"56|33|yibōra śēṣa naha'ba ārau niṣid'dha'ō naha’ba."},{"chapter":56,"verse":34,"text":"56|34|Ārau (siham̐ta thākiba) su'ucca śayyāsamūhata"},{"chapter":56,"verse":35,"text":"56|35|niścaẏa āmi siham̐taka (hurasakalaka) sr̥ṣṭi karaichō biśēṣaraūpata"},{"chapter":56,"verse":36,"text":"56|36|tāra pichata siham̐taka kumāraī banā'ichō"},{"chapter":56,"verse":37,"text":"56|37|nija sbāmīra prati āsakta ārau samabaẏasīẏā"},{"chapter":56,"verse":38,"text":"56|38|sōm̐phālara lōkasakalara bābē."}]}