{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "86|1|Śapata ākāśara ārau yi raātita ātmaprakāśa karaē"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "86|2|ārau kihē tōmāka janāba yē, ‘raātita yiẏē ātmaprakāśa karaē’ sēẏā nō ki"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "86|3|(sēẏā haichē) ujjbala nakṣatra."
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "86|4|Pratyēka jīrara ōparatē'i tattbābadhāẏaka āchē."
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "86|5|Ētēkē mānuhē cintā karaā ucita yē, tāka kihēraē sr̥ṣṭi karaā haichē"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "86|6|tāka sr̥ṣṭi karaā haichē drautagatita nirgata hōraā pānīraē"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "86|7|yiṭō nirgata haẏa mēraudaṇḍa ārau bukura mājara paraā."
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "86|8|Niścaẏa tē'ōm̐ tāka ubhatā'i ānibalai sakṣama."
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "86|9|Yidinā gōpana biṣaẏasamūha paraīkṣā karaā ha’ba"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "86|10|sē'idinā tāra kōnō śakti nāthākiba ārau kōnō sahāẏakāraī'ō nāthākiba."
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "86|11|Śapata ākāśara yiẏē baraṣuṇa dhāraṇa karaē"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "86|12|śapata pr̥thiraīra, yiṭō bidīrṇa haẏa"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "86|13|niścaẏa ē'iṭō (āla-kōra'āna) mīmānsākāraī bāṇī."
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "86|14|Ārau ē'iṭō nirarthaka nahaẏa."
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "86|15|Niścaẏa siham̐ta bhīṣaṇa ṣaṛayantra karaē"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "86|16|ārau maẏō bhīṣaṇa kauśala karaichō."
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "86|17|Ētēkē kāphirasakalaka arakāśa diẏā; siham̐taka kichu samaẏara bābē arakāśa diẏā."
        }
    ]
}