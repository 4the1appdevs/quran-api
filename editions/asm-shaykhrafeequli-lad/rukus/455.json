{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "51|1|Śapata dhūli urauraā'i niẏā batāhara"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "51|2|tāra pichata pānīra bōjā bahanakāraī mēghamālāra"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "51|3|tāra pichata mr̥dugatita bai yōraā nauyānasamūhara"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "51|4|tāra pichata (āllāhara) nirdēśa banṭanakāraī phiraistāsakalara"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "51|5|tōmālōkaka diẏā pratiśrauti araśyē satya."
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "51|6|Niścaẏa pratidāna dirasa araśyambhāraī."
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "51|7|Śapata bahu patha biśiṣṭa ākāśara"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "51|8|niścaẏa tōmālōka paraspara biraōdhī kathāta lipta."
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "51|9|Birata rakhā haẏa tāra paraā yiẏē birata thākē."
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "51|10|Michalīẏāsakala dhbansa ha'ōm̐ka"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "51|11|yisakala sandēha-sanśaẏata nipatita, udāsīna."
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "51|12|Siham̐tē sōdhē, ‘pratidāna dirasa kētiẏā ha’ba’"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "51|13|‘yidinā siham̐taka ju'ita śāsti diẏā ha’ba’."
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "51|14|Kōraā ha’ba, ‘tōmālōkē tōmālōkara śāsti bhōga karaā, iẏāra bābē'i tōmālōkē kharadhara karaichilā’."
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "51|15|Niścaẏa muttākbīsakala thākiba jānnātasamūhata ārau nijaraā prabāhita sthānata"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "51|16|tē'ōm̐lōkarara pratipālakē tē'ōm̐lōkaka yi dāna karaiba sēẏā tē'ōm̐lōkē ānandacittē grahaṇa karaiba; niścaẏa itipūrbē ē'ōm̐lōka āchila saṯkarmaśīla"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "51|17|raātira ati kama samaẏa tē'ōm̐lōkē ṭōpanīta kaṭā'ichila"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "51|18|ārau raātira śēṣa praharata tē'ōm̐lōkē kṣamā praārthanā karaichila"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "51|19|ārau tē'ōm̐lōkara dhana-sampadata āchila bhikhāraī ārau bañcitasakalara haka."
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "51|20|Ārau suniścita biśbāsīsakalara bābē pr̥thiraīta bahutō nidarśana āchē"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "51|21|ārau tōmālōkara nijara mājatō āchē. Tōmālōkē lakṣya nakaraā nēki"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "51|22|ārau ākāśata āchē tōmālōkara jīraikā ārau pratiśrauti diẏā sakalō bastu."
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "51|23|Ētēkē ākāśa ārau pr̥thiraīra pratipālakara śapata! Niścaẏa ē'iṭō parama satya yēnēkai tōmālōkara kathā kōraāṭō satya."
        }
    ]
}