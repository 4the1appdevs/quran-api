{"pages":[{"chapter":87,"verse":16,"text":"87|16|Kintu tōmālōkē pr̥thiraīra jīranaka praādhān'ya diẏā"},{"chapter":87,"verse":17,"text":"87|17|athaca ākhiraāta sarbōttama ārau sthāẏī."},{"chapter":87,"verse":18,"text":"87|18|Niścaẏa iẏāra barṇanā āchē pūrbarartī chahīphāsamūhata"},{"chapter":87,"verse":19,"text":"87|19|ibraāhīma ārau mūchāra chahīphāsamūhata."},{"chapter":88,"verse":1,"text":"88|1|Tōmāra ōcarata ācchannakāraī (kiẏāmatara) sambāda āhichēnē"},{"chapter":88,"verse":2,"text":"88|2|sē'idinā kichumāna mukhamaṇḍala ha’ba aranata"},{"chapter":88,"verse":3,"text":"88|3|karmaklānta, paraiśraānta"},{"chapter":88,"verse":4,"text":"88|4|siham̐ta praraēśa karaiba jbalanta ju'ita"},{"chapter":88,"verse":5,"text":"88|5|uttapta utalā nijaraāra pānī pāna karaibalai diẏā ha’ba"},{"chapter":88,"verse":6,"text":"88|6|siham̐tara bābē kām̐iṭabiśiṣṭa ghām̐hara bāhiraē āna kōnō khādya nāthākiba"},{"chapter":88,"verse":7,"text":"88|7|i siham̐tara puṣṭi'ō sādhana nakaraiba ārau kṣudhā'ō nibr̥tta nakaraiba."},{"chapter":88,"verse":8,"text":"88|8|Ārau sē'idinā kichumāna mukhamaṇḍala ha’ba ānandōjjbala"},{"chapter":88,"verse":9,"text":"88|9|nija karmara sāphalyata paraitr̥pta"},{"chapter":88,"verse":10,"text":"88|10|su'ucca jānnātata"},{"chapter":88,"verse":11,"text":"88|11|tāta siham̐tē kōnō anarthaka kathā śunibalai nāpāba"},{"chapter":88,"verse":12,"text":"88|12|tāta thākiba prabāhamāna nijaraā"},{"chapter":88,"verse":13,"text":"88|13|tāta thākiba unnata śayyāsamūha"},{"chapter":88,"verse":14,"text":"88|14|Ārau prastuta thākiba pānapātrasamūha"},{"chapter":88,"verse":15,"text":"88|15|ārau śāraī śāraīkai rakhā gārausamūha"},{"chapter":88,"verse":16,"text":"88|16|ārau bistr̥ta pārai thōraā dalicāsamūha"},{"chapter":88,"verse":17,"text":"88|17|iham̐tē uṭara pinē dr̥ṣṭipāta nakaraē nēki, kēnēkai tāka sr̥ṣṭi karaā haichē"},{"chapter":88,"verse":18,"text":"88|18|ārau ākāśara phālē, kēnēkai tāka urd'dhata sthāpana karaā haichē"},{"chapter":88,"verse":19,"text":"88|19|ārau parbatasamūhara phālē, sē'ibōra kēnēkai pratiṣṭhita karaā haichē"},{"chapter":88,"verse":20,"text":"88|20|ārau pr̥thiraīkhanara phālē, kidaraē tāka bistr̥ta karaā haichē"},{"chapter":88,"verse":21,"text":"88|21|ētēkē tumi upadēśa diẏā, tumitō kērala ējana upadēśadātā"},{"chapter":88,"verse":22,"text":"88|22|tumi siham̐tara ōparata śakti praẏōgakāraī nahaẏa."},{"chapter":88,"verse":23,"text":"88|23|Kintu kōnōbā'i mukha ghuraā'i la’lē athabā kupharaī karailē"},{"chapter":88,"verse":24,"text":"88|24|tēntē āllāhē tāka mahāśāsti pradāna karaiba."},{"chapter":88,"verse":25,"text":"88|25|Niścaẏa āmāra ōcaratē'i siham̐tara pratyārartana."},{"chapter":88,"verse":26,"text":"88|26|Ārau siham̐tara hicāpa-nikāca āmāraē'i dāẏitba."}]}