    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "86|1|akasam tanneyana, ratriyil varunnatu tanneyana satyam"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "86|2|ratriyil varunnat ennal entanenn ninakkariyumea"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "86|3|tulacc kayarunna naksatramatre at‌"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "86|4|tanre karyattil oru melneattakkaranuntayikkeantallate yatearalumilla"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "86|5|ennal manusyan cinticcu neakkatte tan entil ninnan srstikkappettirikkunnat enn‌"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "86|6|tericcu vilunna oru dravakattil ninnatre avan srstikkappettirikkunnat‌"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "86|7|mutukellinum, variyellukalkkumitayil ninn at purattu varunnu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "86|8|avane (manusyane) tiriccukeantu varan tirccayayum avan (allahu) kalivullavanakunnu"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "86|9|rahasyannal pariseadhikkappetunna divasam"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "86|10|appeal avan (manusyan‌) yatearu saktiyea, sahayiyea untayirikkukayilla"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "86|11|avartticc malapeyyikkunna akasattekkeantum"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "86|12|sasyalatadikal mulappikkunna bhumiyekkeantum satyam"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "86|13|tirccayayum itu nirnayakamaya oru vakkakunnu"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "86|14|itu tamasayalla"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "86|15|tirccayayum avar (valiya) tantram prayeagiccu keantirikkum"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "86|16|nanum (valiya) tantram prayeagiccu keantirikkum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "86|17|akayal (nabiye,) ni satyanisedhikalkk kalatamasam nalkuka. alpasamayattekk avarkk tamasam nalkiyekkuka"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "87|1|atyunnatanaya ninre raksitavinre namam prakirttikkuka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "87|2|srstikkukayum, sanvidhanikkukayum ceyta (raksitavinre)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "87|3|vyavastha nirnayiccu margadarsanam nalkiyavanum"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "87|4|meccil purannal ulpadippiccavanum"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "87|5|ennitt atine unannikkarinna cavarakki tirttavanumaya (raksitavinre namam)"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "87|6|ninakk nam otittaram. ni marannupeakukayilla"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "87|7|allahu uddesiccatealike. tirccayayum avan parasyamayatum, rahasyamayirikkunnatum ariyunnu"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "87|8|kututal eluppamullatilekk ninakk nam sekaryamuntakkittarunnatuman‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "87|9|atinal upadesam phalappetunnuvenkil ni upadesiccu kealluka"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "87|10|bhayappetunnavar upadesam svikariccu keallunnatan‌"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "87|11|erravum nirbhagyavanayittullavan atine (upadesatte) vittakannu peakunnatan‌"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "87|12|valiya agniyil katann eriyunnavanatre avan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "87|13|pinnit avan atil marikkukayilla. jivikkukayumilla"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "87|14|tirccayayum parisud'dhi netiyavar vijayam prapiccu"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "87|15|tanre raksitavinre namam smarikkukayum ennitt namaskarikkukayum (ceytavan)"
        }
