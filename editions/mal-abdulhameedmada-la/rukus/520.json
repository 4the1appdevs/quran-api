{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "79|1|(avisvasikalilekk‌) iranniccenn (avarute atmavukale) uriyetukkunnava tanneyana satyam"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "79|2|(satyavisvasikalute atmavukale) semyatayeate purattetukkunnava tanneyana, satyam"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "79|3|ukkeate oluki varunnava tanneyana, satyam"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "79|4|ennittu munneattu kuticcu peakunnava tanneyana, satyam"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "79|5|karyam niyantrikkunnavayum tanneyana, satyam"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "79|6|a natukkunna sambhavam natukkamuntakkunna divasam"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "79|7|atine tutarnn atinre pinnale marreannum"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "79|8|cila hrdayannal annu viraccu keantirikkum"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "79|9|avayute kannukal ann kilpeattu talnnirikkum"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "79|10|avar parayum: tirccayayum nam (nam'mute) munsthitiyilekk matakkappetunnavaranea"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "79|11|nam jirnicca ellukalayi kalinnalum (namukk matakkamea)"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "79|12|avar parayukayan‌: annaneyanenkil nastakaramaya oru tiriccuvaravayirikkum at‌"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "79|13|at oreyearu ghearasabdam matramayirikkum"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "79|14|appealata avar bhumukhattettikkalinnu"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "79|15|musanabiyute varttamanam ninakk vannettiyea"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "79|16|tvuva enna parisud'dha tal‌varayil vecc addehattinre raksitav addehatte vilicc iprakaram paranna sandarbham"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "79|17|ni phir'aunre atuttekku peakuka. tirccayayum avan atirukavinnirikkunnu"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "79|18|ennitt ceadikkuka: ni parisud'dhi prapikkan tayyaruntea"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "79|19|ninre raksitavinkalekk ninakk nan vali kaniccutaram. ennitt ni bhayappetanum (tayyaruntea)"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "79|20|annane addeham (musa) avann a mahattaya drstantam kaniccukeatuttu"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "79|21|appeal avan nisedhiccu tallukayum dhikkarikkukayum ceytu"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "79|22|pinne, avan etir sramannal natattuvanayi pintirinnu peayi"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "79|23|annane avan (tanre alkkare) sekhariccu. ennittu vilambaram ceytu"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "79|24|nan ninnalute atyunnatanaya raksitavakunnu enn avan parannu"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "79|25|appeal paraleakattileyum ihaleakattileyum siksaykkayi allahu avane pitikuti"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "79|26|tirccayayum atil bhayappetunnavarkk oru gunapathamunt‌"
        }
    ]
}