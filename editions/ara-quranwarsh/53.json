{
    "chapter": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "وَالنَّجْمِ إِذَا هَو۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "مَا ضَلَّ صَٰحِبُكُمْ وَمَا غَو۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "وَمَا يَنطِقُ عَنِ اِ۬لْهَو۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "إِنْ هُوَ إِلَّا وَحْي ࣱ يُوح۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "عَلَّمَهُۥ شَدِيدُ اُ۬لْقُو۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "ذُو مِرَّة ࣲ ۖ فَاسْتَو۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "وَهُوَ بِالُافُقِ اِ۬لَاعْل۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "ثُمَّ دَنَا فَتَدَلّ۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "فَكَانَ قَابَ قَوْسَيْنِ أَوَ اَدْن۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "فَأَوْح۪يٰٓ إِلَيٰ عَبْدِهِۦ مَآ أَوْح۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "مَا كَذَبَ اَ۬لْفُؤَادُ مَا ر۪أ۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "أَفَتُمَٰرُونَهُۥ عَلَيٰ مَا يَر۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "وَلَقَدْ ر۪ء۪اهُ نَزْلَةً ا۟خْر۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "عِندَ سِدْرَةِ اِ۬لْمُنتَه۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "عِندَهَا جَنَّةُ اُ۬لْمَأْو۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "إِذْ يَغْشَي اَ۬لسِّدْرَةَ مَا يَغْش۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "مَا زَاغَ اَ۬لْبَصَرُ وَمَا طَغ۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "لَقَدْ ر۪أ۪يٰ مِنَ اٰيَٰتِ رَبِّهِ اِ۬لْكُبْر۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "أَفَرَٰٓيْتُمُ اُ۬للَّٰتَ وَالْعُزّ۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "وَمَنَوٰةَ اَ۬لثَّالِثَةَ اَ۬لُاخْر۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "أَلَكُمُ اُ۬لذَّكَرُ وَلَهُ اُ۬لُانث۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "تِلْكَ إِذا ࣰ قِسْمَة ࣱ ضِيز۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "إِنْ هِيَ إِلَّآ أَسْمَآء ࣱ سَمَّيْتُمُوهَآ أَنتُمْ وَءَابَآؤُكُم مَّآ أَنزَلَ اَ۬للَّهُ بِهَا مِن سُلْطَٰنٍۖ اِنْ يَّتَّبِعُونَ إِلَّا اَ۬لظَّنَّ وَمَا تَهْوَي اَ۬لَانفُسُۖ وَلَقَدْ جَآءَهُم مِّن رَّبِّهِمُ اُ۬لْهُد۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "أَمْ لِلِانسَٰنِ مَا تَمَنّ۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "فَلِلهِ اِ۬لَاخِرَةُ وَالُاول۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 26,
            "text": "۞وَكَم مِّن مَّلَك ࣲ فِے اِ۬لسَّمَٰوَٰتِ لَا تُغْنِے شَفَٰعَتُهُمْ شَئْاً اِلَّا مِنۢ بَعْدِ أَنْ يَّاذَنَ اَ۬للَّهُ لِمَنْ يَّشَآءُ وَيَرْض۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 27,
            "text": "إِنَّ اَ۬لذِينَ لَا يُومِنُونَ بِالَاخِرَةِ لَيُسَمُّونَ اَ۬لْمَلَٰٓئِكَةَ تَسْمِيَةَ اَ۬لُانث۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 28,
            "text": "وَمَا لَهُم بِهِۦ مِنْ عِلْمٍۖ اِنْ يَّتَّبِعُونَ إِلَّا اَ۬لظَّنَّۖ وَإِنَّ اَ۬لظَّنَّ لَا يُغْنِے مِنَ اَ۬لْحَقِّ شَئْا ࣰ ۖ"
        },
        {
            "chapter": 53,
            "verse": 29,
            "text": "فَأَعْرِضْ عَن مَّن تَوَلّ۪يٰ عَن ذِكْرِنَا وَلَمْ يُرِدِ اِلَّا اَ۬لْحَيَوٰةَ اَ۬لدُّنْي۪اۖ"
        },
        {
            "chapter": 53,
            "verse": 30,
            "text": "ذَٰلِكَ مَبْلَغُهُم مِّنَ اَ۬لْعِلْمِۖ إِنَّ رَبَّكَ هُوَ أَعْلَمُ بِمَن ضَلَّ عَن سَبِيلِهِۦۖ وَهُوَ أَعْلَمُ بِمَنِ اِ۪هْتَد۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 31,
            "text": "وَلِلهِ مَا فِے اِ۬لسَّمَٰوَٰتِ وَمَا فِے اِ۬لَارْضِ لِيَجْزِيَ اَ۬لذِينَ أَسَٰٓـُٔواْ بِمَا عَمِلُواْ وَيَجْزِيَ اَ۬لذِينَ أَحْسَنُواْ بِالْحُسْنَيۖ"
        },
        {
            "chapter": 53,
            "verse": 32,
            "text": "اَ۬لذِينَ يَجْتَنِبُونَ كَبَٰٓئِرَ اَ۬لِاثْمِ وَالْفَوَٰحِشَ إِلَّا اَ۬للَّمَمَۖ إِنَّ رَبَّكَ وَٰسِعُ اُ۬لْمَغْفِرَةِۖ هُوَ أَعْلَمُ بِكُمُۥٓ إِذَ اَنشَأَكُم مِّنَ اَ۬لَارْضِ وَإِذَ اَنتُمُۥٓ أَجِنَّة ࣱ فِے بُطُونِ أُمَّهَٰتِكُمْۖ فَلَا تُزَكُّوٓاْ أَنفُسَكُمْۖ هُوَ أَعْلَمُ بِمَنِ اِ۪تَّق۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 33,
            "text": "أَفَرَٰٓيْتَ اَ۬لذِے تَوَلّ۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "وَأَعْط۪يٰ قَلِيلا ࣰ وَأَكْد۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "أَعِندَهُۥ عِلْمُ اُ۬لْغَيْبِ فَهُوَ يَر۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "أَمْ لَمْ يُنَبَّأْ بِمَا فِے صُحُفِ مُوس۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "وَإِبْرَٰهِيمَ اَ۬لذِے وَفّ۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "أَلَّا تَزِرُ وَازِرَة ࣱ وِزْرَ أُخْر۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "وَأَن لَّيْسَ لِلِانسَٰنِ إِلَّا مَا سَع۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "وَأَنَّ سَعْيَهُۥ سَوْفَ يُر۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "ثُمَّ يُجْز۪يٰهُ اُ۬لْجَزَآءَ اَ۬لَاوْف۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "وَأَنَّ إِلَيٰ رَبِّكَ اَ۬لْمُنتَه۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "وَأَنَّهُۥ هُوَ أَضْحَكَ وَأَبْك۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "وَأَنَّهُۥ هُوَ أَمَاتَ وَأَحْي۪اۖ"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "وَأَنَّهُۥ خَلَقَ اَ۬لزَّوْجَيْنِ اِ۬لذَّكَرَ وَالُانث۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "مِن نُّطْفَةٍ اِذَا تُمْن۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "۞وَأَنَّ عَلَيْهِ اِ۬لنَّشْأَةَ اَ۬لُاخْر۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "وَأَنَّهُۥ هُوَ أَغْن۪يٰ وَأَقْن۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "وَأَنَّهُۥ هُوَ رَبُّ اُ۬لشِّعْر۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "وَأَنَّهُۥٓ أَهْلَكَ عَادا ࣰ اَ۬لُّاول۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "وَثَمُودا ࣰ فَمَآ أَبْق۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "وَقَوْمَ نُوح ࣲ مِّن قَبْلُۖ إِنَّهُمْ كَانُواْ هُمُۥٓ أَظْلَمَ وَأَطْغ۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "وَالْمُوتَفِكَةَ أَهْو۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "فَغَشّ۪يٰهَا مَا غَشّ۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "فَبِأَيِّ ءَالَآءِ رَبِّكَ تَتَمَار۪يٰۖ"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "هَٰذَا نَذِير ࣱ مِّنَ اَ۬لنُّذُرِ اِ۬لُاول۪يٰٓۖ"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "أَزِفَتِ اِ۬لَازِفَةُۖ"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "لَيْسَ لَهَا مِن دُونِ اِ۬للَّهِ كَاشِفَةٌۖ"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "اَفَمِنْ هَٰذَا اَ۬لْحَدِيثِ تَعْجَبُونَ"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "وَتَضْحَكُونَ وَلَا تَبْكُونَ"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "وَأَنتُمْ سَٰمِدُونَۖ"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "فَاسْجُدُواْ لِلهِ وَاعْبُدُواْ۩ۖ"
        }
    ]
}