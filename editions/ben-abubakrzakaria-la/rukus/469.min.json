{"rukus":[{"chapter":56,"verse":1,"text":"56|1|yakhana sanghatita habe kiyamata [1]"},{"chapter":56,"verse":2,"text":"56|2|(takhana) etara sanghatana mithya balara ke'u thakabe na [1]."},{"chapter":56,"verse":3,"text":"56|3|Eta ka'uke karabe nica, ka'uke karabe samunnata [1]"},{"chapter":56,"verse":4,"text":"56|4|yakhana prabala kampane prakampita habe yamina"},{"chapter":56,"verse":5,"text":"56|5|ebam curna-bicurna haye parabe parbatamala"},{"chapter":56,"verse":6,"text":"56|6|atahpara ta paryabasita habe utksipta dhulikanaya"},{"chapter":56,"verse":7,"text":"56|7|ara tomara bibhakta haye parabe tina dale --- [1]"},{"chapter":56,"verse":8,"text":"56|8|atahpara dana dikera dala; dana dikera dalati kata saubhagyabana [1]"},{"chapter":56,"verse":9,"text":"56|9|ebam bama dikera dala; ara bama dikera dalati kata hatabhaga [1]"},{"chapter":56,"verse":10,"text":"56|10|ara agrabartigana'i to agrabarti [1]"},{"chapter":56,"verse":11,"text":"56|11|tara'i naikatyapraapta"},{"chapter":56,"verse":12,"text":"56|12|ni'amatapurna udyane"},{"chapter":56,"verse":13,"text":"56|13|bahu sankhyaka habe purbabartidera madhya theke"},{"chapter":56,"verse":14,"text":"56|14|ebam alpa sankhyaka habe parabartidera madhya theke [1]."},{"chapter":56,"verse":15,"text":"56|15|Sbarna o dami pathara khacita asane"},{"chapter":56,"verse":16,"text":"56|16|tara helana diye basabe, paraspara mukhomukhi haye [1]."},{"chapter":56,"verse":17,"text":"56|17|Tadera asepase ghuraphira karabe cira - kisorera [1]"},{"chapter":56,"verse":18,"text":"56|18|panapatra, jaga o prasrabana nihsrta surapurna peyala niye [1]."},{"chapter":56,"verse":19,"text":"56|19|Se sura pane tadera sirahpira habe na, tara jnanahara'o habe na--- [1]"},{"chapter":56,"verse":20,"text":"56|20|Ara (ghoraphera karabe) tadera pachandamata phalamula niye [1]"},{"chapter":56,"verse":21,"text":"56|21|ara tadera insita pakhira gosata niye [1]."},{"chapter":56,"verse":22,"text":"56|22|Ara tadera jan'ya thakabe dagara caksubisista hura"},{"chapter":56,"verse":23,"text":"56|23|yena tara suraksita mukta [1]"},{"chapter":56,"verse":24,"text":"56|24|tadera kajera puraskarasbarupa."},{"chapter":56,"verse":25,"text":"56|25|Sekhane tara sunabe na kona asara ba papabakya [1]"},{"chapter":56,"verse":26,"text":"56|26|‘salama’ ara ‘salama’ bani chara."},{"chapter":56,"verse":27,"text":"56|27|Ara dana dikera dala, kata bhagyabana dana dikera dala"},{"chapter":56,"verse":28,"text":"56|28|tara thakabe emana udyane, yate ache [1] kamtahina kulagacha [2]"},{"chapter":56,"verse":29,"text":"56|29|ebam kamdi bhara kala gacha"},{"chapter":56,"verse":30,"text":"56|30|ara samprasarita chaya [1]"},{"chapter":56,"verse":31,"text":"56|31|ara sada prabahamana pani"},{"chapter":56,"verse":32,"text":"56|32|o pracura phalamula"},{"chapter":56,"verse":33,"text":"56|33|ya sesa habe na o ya nisid'dha'o habena [1]."},{"chapter":56,"verse":34,"text":"56|34|Ara samucca sayyasamuha [1]"},{"chapter":56,"verse":35,"text":"56|35|niscaya amara taderake srsti karechi bisesarupe [1]"},{"chapter":56,"verse":36,"text":"56|36|atahpara taderake karechi kumari [1]"},{"chapter":56,"verse":37,"text":"56|37|sohagini [1] o samabayaska [2]"},{"chapter":56,"verse":38,"text":"56|38|danadikera lokadera jan'ya."}]}