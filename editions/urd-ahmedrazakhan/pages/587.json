{
    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "جب آسمان پھٹ پڑے،"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "اور جب تارے جھڑ پڑیں،"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "اور جب سمندر بہادیے جائیں"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "اور جب قبریں کریدی جائیں"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "ہر جان، جان لے گی جو اس نے آگے بھیجا اور جو پیچھے"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "اے آدمی! تجھے کس چیز نے فریب دیا اپنے کرم والے رب سے"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "جس نے تجھے پیدا کیا پھر ٹھیک بنایا پھر ہموار فرمایا"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "جس صورت میں چاہا تجھے ترکیب دیا"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "کوئی نہیں بلکہ تم انصاف ہونے کو جھٹلانتے ہو"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "اور بیشک تم پر کچھ نگہبان ہیں"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "معزز لکھنے والے"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "جانتے ہیں جو کچھ تم کرو"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "بیشک نِکو کار ضرور چین میں ہیں"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "اور بیشک بدکار ضرور دوزخ میں ہیں،"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "انصاف کے دن اس میں جائیں گے،"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "اور اس سے کہیں چھپ نہ سکیں گے،"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "اور تو کیا جانیں کیسا انصاف کا دن،"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "پھر تو کیا جانے کیسا انصاف کا دن،"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "جس دن کوئی جان کسی جان کا کچھ اختیار نہ رکھے گی اور سارا حکم اس دن اللہ کا ہے،"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "کم تولنے والوں کی خرابی ہے،"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "وہ کہ جب اوروں سے ناپ لیں پورا لیں،"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "اور جب انہیں ناپ تول کردی کم کردیں،"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "کیا ان لوگوں کو گمان نہیں کہ انہیں اٹھنا ہے،"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "ایک عظمت والے دن کے لیے"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "جس دن سب لوگ رب العالمین کے حضور کھڑے ہوں گے،"
        }
    ]
}