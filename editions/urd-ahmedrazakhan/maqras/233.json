{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "یہ آپس میں کاہے کی پوچھ گچھ کررہے ہیں"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "بڑی خبر کی"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "جس میں وہ کئی راہ ہیں"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "ہاں ہاں اب جائیں گے،"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "پھر ہاں ہاں جان جائیں گے"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "کیا ہم نے زمین کو بچھونا نہ کیا"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "اور پہاڑوں کو میخیں"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "اور تمہیں جوڑے بنایا"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "اور تمہاری نیند کو آرام کیا"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "اور رات کو پردہ پوش کیا"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "اور دن کو روزگار کے لیے بنایا"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "اور تمہارے اوپر سات مضبوط چنائیاں چنیں (تعمیر کیں)"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "اور ان میں ایک نہایت چمکتا چراغ رکھا"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "اور پھر بدلیوں سے زور کا پانی اتارا،"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "کہ اس سے پیدا فرمائیں اناج اور سبزہ،"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "اور گھنے باغ"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "بیشک فیصلہ کا دن ٹھہرا ہوا وقت ہے،"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "جس دن صور پھونکا جائے گا تو تم چلے آؤ گے فوجوں کی فوجیں،"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "اور آسمان کھولا جائے گا کہ دروازے ہوجائے گا"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "اور پہاڑ چلائے جائیں گے کہ ہوجائیں گے جیسے چمکتا ریتا دور سے پانی کا دھوکا دیتا،"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "بیشک جہنم تاک میں ہے،"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "سرکشوں کا ٹھکانا،"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "اس میں قرنوں (مدتوں) رہیں گے"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "اس میں کسی طرح کی ٹھنڈک کا مزہ نہ پائیں گے اور نہ کچھ پینے کو،"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "مگر کھولتا پانی اور دوزخیوں کا جلتا پیپ،"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "جیسے کو تیسا بدلہ"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "بیشک انہیں حساب کا خوف نہ تھا"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "اور انہوں نے ہماری آیتیں حد بھر جھٹلائیں،"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "اور ہم نے ہر چیز لکھ کر شمار کر رکھی ہے"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "اب چکھو کہ ہم تمہیں نہ بڑھائیں گے مگر عذاب،"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "بیشک ڈر والوں کو کامیابی کی جگہ ہے"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "باغ ہیں اور انگور،"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "اور اٹھتے جوبن والیاں ایک عمر کی،"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "اور چھلکتا جام"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "جس میں نہ کوئی بیہودہ بات سنیں نہ جھٹلانا"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "صلہ تمہارے رب کی طرف سے نہایت کافی عطا،"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "وہ جو رب ہے آسمانوں کا اور زمین کا اور جو کچھ ان کے درمیان ہے رحمن کہ اس سے بات کرنے کا اختیار نہ رکھیں گے"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "جس دن جبریل کھڑا ہوگا اور سب فرشتے پرا باندھے (صفیں بنائے) کوئی نہ بول سکے گا مگر جسے رحمن نے اذن دیا اور اس نے ٹھیک بات کہی"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "وہ سچا دن ہے اب جو چاہے اپنے رب کی طرف راہ بنالے"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "ہم تمہیں ایک عذاب سے ڈراتے ہیں کہ نزدیک آگیا جس دن آدمی دیکھے گا جو کچھ اس کے ہاتھوں نے آگے بھیجا اور کافر کہے گا ہائے میں کسی طرح خاک ہوجاتا"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "قسم ان کی کہ سختی سے جان کھینچیں"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "اور نرمی سے بند کھولیں"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "اور آسانی سے پیریں"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "پھر آگے بڑھ کر جلد پہنچیں"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "پھر کام کی تدبیر کریں"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "کہ کافروں پر ضرور عذاب ہوگا جس دن تھر تھرائے گی تھرتھرانے والی"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "اس کے پیچھے آئے گی پیچھے آنے والی"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "کتنے دل اس دن دھڑکتے ہوں گے،"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "آنکھ اوپر نہ اٹھا سکیں گے"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "کافر کہتے ہیں کیا ہم پھر الٹے پاؤں پلٹیں گے"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "کیا ہم جب گلی ہڈیاں ہوجائیں گے"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "بولے یوں تو یہ پلٹنا تو نرا نقصان ہے"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "تو وہ نہیں مگر ایک جھڑکی"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "جبھی وہ کھلے میدان میں آپڑے ہوں گے"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "کیا تمہیں موسیٰ کی خبر آئی"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "جب اسے اس کے رب نے پاک جنگل طویٰ میں ندا فرمائی،"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "کہ فرعون کے پاس جا اس نے سر اٹھایا"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "اس سے کہہ کیا تجھے رغبت اس طرف ہے کہ ستھرا ہو"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "اور تجھے تیرے رب کی طرف راہ بتاؤں کہ تو ڈرے"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "پھر موسیٰ نے اسے بہت بڑی نشانی دکھائی"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "اس پر اس نے جھٹلایا اور نافرمانی کی،"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "پھر پیٹھ دی اپنی کوشش میں لگا"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "تو لوگوں کو جمع کیا پھر پکارا،"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "پھر بولا میں تمہارا سب سے اونچا رب ہوں"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "تو اللہ نے اسے دنیا و آخرت دونوں کے عذاب میں پکڑا"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "بیشک اس میں سیکھ ملتا ہے اسے جو ڈرے"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "کیا تمہاری سمجھ کے مطابق تمہارا بنانا مشکل یا آسمان کا اللہ نے اسے بنایا،"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "اس کی چھت اونچی کی پھر اسے ٹھیک کیا"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "اس کی رات اندھیری کی اور اس کی روشنی چمکائی"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "اور اس کے بعد زمین پھیلائی"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "اس میں سے اس کا پانی اور چارہ نکا لا"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "اور پہاڑوں کو جمایا"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "تمہارے اور تمہارے چوپایوں کے فائدہ کو،"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "پھر جب آئے گی وہ عام مصیبت سب سے بڑی"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "اس دن آدمی یاد کرے گا جو کوشش کی تھی"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "اور جہنم ہر دیکھنے والے پر ظاہر کی جائے گی"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "تو وہ جس نے سرکشی کی"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "اور دنیا کی زندگی کو ترجیح دی"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "تو بیشک جہنم ہی اس کا ٹھکانا ہے،"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "اور وہ جو اپنے رب کے حضور کھڑے ہونے سے ڈرا اور نفس کو خواہش سے روکا"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "تو بیشک جنت ہی ٹھکانا ہے"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "تم سے قیامت کو پوچھتے ہیں کہ وہ کب کے لیے ٹھہری ہوئی ہے،"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "تمہیں اس کے بیان سے کیا تعلق"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "تمہارے رب ہی تک اس کی انتہا ہے،"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "تم تو فقط اسے ڈرا نے والے ہو جو اس سے ڈرے،"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "گویا جس دن وہ اسے دیکھیں گے دنیا میں نہ رہے تھے مگر ایک شام یا اس کے دن چڑھے،"
        }
    ]
}