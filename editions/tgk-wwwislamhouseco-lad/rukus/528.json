{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "86|1|Savgand ʙa osmon va savgand ʙa sitorai şaʙgard"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "86|2|Va ci medonī, ki sitorai şaʙgard cist"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "86|3|[Hamon] Sitorai furūzon ast"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "86|4|Heç kas nest magar on ki ʙar ū nigahʙone [az fariştagon gumoşta şuda] ast"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "86|5|Inson ʙojad ʙingarad, ki az cī ciz ofarida şudaast"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "86|6|Az jak oʙi çahanda ofarida şudaast"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "86|7|Ki az mijoni [ustuxoni] puşt [-i mard] va sina [-i zan] ʙerun meojad"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "86|8|Be gumon, Alloh taolo ʙar ʙozgardondani ū [pas az marg] tavonost"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "86|9|Rūze, ki rozho oşkor gardad"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "86|10|[Dar on rūz] Inson heç tavonu jovare nadorad"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "86|11|Savgand ʙa osmoni purʙoron"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "86|12|Va savgand ʙa zamini purşikof [ki gijohon az on sar ʙarmeovarand]"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "86|13|Be gumon, in Qur'on suxani çudokunandai haq az ʙotil ast"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "86|14|Va [suxani] hazlu ʙehuda nest"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "86|15|Onon [kofiron] pajvasta hila va najrang mekunand"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "86|16|Va man [niz] hila [va tadʙir] mekunam"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "86|17|Pas, kofironro muhlat deh, [va] andake rahojaşon kun [to ƣarqi gunoh ʙoşand]"
        }
    ]
}