{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "78|1|tārā ēkē an'yēra kāchē kī biṣaẏē jijñāsābāda karachē"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "78|2|mahāsambādaṭira biṣaẏē [1]"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "78|3|yē biṣaẏē tārā matānaikya karachē [1]"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "78|4|kakhanō nā [1], tārā acirē'i jānatē pārabē"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "78|5|tārapara bali kakhanō nā, tārā acirē'i jānatē pārabē."
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "78|6|Āmarā ki karini yamīnakē śayyā"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "78|7|āra parbatasamūhakē pērēka"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "78|8|āra āmarā sr̥ṣṭi karēchi tōmādērakē jōṛāẏa jōṛāẏa"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "78|9|āra tōmādēra ghumakē karēchi biśraāma [1]"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "78|10|āra karēchi rātakē ābaraṇa"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "78|11|āra karēchi dinakē jībikā āharaṇēra samaẏa"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "78|12|āra āmarā nirmāṇa karēchi tōmādēra uparē sudr̥ṛha sāta ākāśa [1]"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "78|13|āra āmarā sr̥ṣṭi karēchi prōjjbala dīpa [1]."
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "78|14|Āra āmarā barṣaṇa karēchi mēghamālā hatē pracura bāri [1]"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "78|15|yātē tā dbārā āmarā uṯpanna kari śasya, udbhida"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "78|16|ō ghana sannibiṣṭa udyāna."
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "78|17|Niścaẏa nirdhārita āchē bicāra dina [1]"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "78|18|sēdina śiṅgāẏa phum̐ka dēẏā habē takhana tōmarā dalē dalē āsabē [1]"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "78|19|āra ākāśa unmukta karā habē, phalē tā habē bahu dbārabiśiṣṭa [1]."
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "78|20|Āra calamāna karā habē parbatasamūhakē, phalē sēgulō haẏē yābē marīcikā [1]"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "78|21|niścaẏa jāhānnāma ōṯ pētē apēkṣamāna"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "78|22|sīmālaṅghanakārīdēra jan'ya pratyābartanasthala."
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "78|23|Sēkhānē tārā yuga yuga dharē abasthāna karabē [1]."
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "78|24|Sēkhānē tārā āsbādana karabē nā śītalatā, nā kōnō pānīẏa"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "78|25|phuṭanta pāni ō pum̐ja chāṛā [1]"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "78|26|Ēṭā'i upayukta pratiphala [1]."
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "78|27|Niścaẏa tārā kakhanō hisēbēra āśā karata nā"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "78|28|āra tārā āmādēra nidarśanābalītē kaṭhōrabhābē mithyārōpa karēchila [1]."
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "78|29|Āra sabakichu'i āmarā sanrakṣaṇa karēchi likhitabhābē."
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "78|30|Ataḥpara tōmarā āsbāda grahaṇa kara, āmarā tō tōmādēra śāsti'i śudhu br̥d'dhi karaba."
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "78|31|Niścaẏa muttākīdēra jan'ya āchē sāphalya"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "78|32|udyānasamūha, āṅgurasamūha"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "78|33|āra samabaẏaskā [1] udbhinna yaubanā taruṇī"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "78|34|ēbaṁ paripūrṇa pānipātra."
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "78|35|Sēkhānē tārā śunabē nā kōnō asāra ō mithyā bākya [1]"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "78|36|āpanāra rabēra pakṣa thēkē puraskāra, yathōcita dānasbarūpa [1]"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "78|37|yini āsamānasamūha, yamīna ō ē du’ẏēra madhyabartī samasta kichura raba, daẏāmaẏa; tām̐ra kāchē ābēdana-nibēdanēra śakti tādēra thākabē nā [1]."
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "78|38|Sēdina rūh ō phērēśatāgaṇa sāribad'dhabhābē dām̐rābē [1]; sēdina kē'u kathā balabē nā, tabē ‘rahamāna’ yākē anumati dēbēna sē chāṛā ēbaṁ sē saṭhika kathā balabē [2]."
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "78|39|Ē dinaṭi satya; ata'ēba, yāra icchē sē tāra rabēra nikaṭa āśraẏa grahaṇa karuka."
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "78|40|Niścaẏa āmarā tōmādērakē āsanna śāsti samparkē satarka karalāma; yēdina mānuṣa tāra kr̥takarma dēkhatē pābē ēbaṁ kāphira balabē, ‘hāẏa! Āmi yadi māṭi hatāma [1]!’"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "79|1|Śapatha [1] nirmamabhābē uṯpāṭanakārīdēra [2]"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "79|2|āra mr̥dubhābē bandhanamuktakārīdēra [1]"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "79|3|āra tībra gatitē santaraṇakārīdēra [1]"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "79|4|āra drutabēgē agrasaramānadēra [1]"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "79|5|ataḥpara saba kāja nirbāhakārīdēra [1]."
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "79|6|Sēdina prakampitakārī prakampita karabē"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "79|7|tākē anusaraṇa karabē parabartī kampanakārī [1]"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "79|8|anēka hr̥daẏa sēdina santrasta habē [1]"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "79|9|tādēra dr̥ṣṭisamūha bhīti-bihbalatāẏa nata habē."
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "79|10|Tārā balē, ‘āmarā ki āgēra abasthāẏa phirē yāba'i"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "79|11|cūrṇabicūrṇa asthitē pariṇata ha'ōẏāra para'ō?’"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "79|12|Tārā balē, ‘tā'i yadi haẏa tabē tō ēṭā ēka sarbanāśā pratyābartana.’"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "79|13|Ē tō śudhu ēka bikaṭa ā'ōẏāja [1]"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "79|14|takhana'i maẏadānē [1] tādēra ābirbhāba habē."
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "79|15|Āpanāra kāchē mūsāra br̥ttānta paum̐chēchē ki [1]"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "79|16|Yakhana tām̐ra raba pabitra upatyakā ‘tu'ōẏā’ẏa tām̐kē ḍēkē balēchilēna"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "79|17|‘phira‘ā'unēra kāchē yāna, sē tō sīmālaṅghana karēchē,’"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "79|18|ataḥpara baluna, ‘tōmāra ki āgraha āchē yē, tumi pabitra ha'ō—"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "79|19|‘āra āmi tōmākē tōmāra rabēra dikē pathapradarśana kari, yātē tumi tām̐kē bhaẏa kara?’"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "79|20|Ataḥpara tini tākē mahānidarśana dēkhālēna [1]."
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "79|21|Kintu sē mithyārōpa karala ēbaṁ abādhya hala."
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "79|22|Tārapara sē pichanē phirē pratibidhānē sacēṣṭa hala [1]."
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "79|23|Ataḥpara sē sakalakē samabēta karē ghōṣaṇā dila"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "79|24|ataḥpara balala, ‘āmi'i tōmādēra sarbōcca raba.’"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "79|25|Ataḥpara āllāh tākē ākhērātē ō duniẏāẏa kaṭhina śāstitē pākaṛā'ō karalēna [1]."
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "79|26|Niścaẏa yē bhaẏa karē tāra jan'ya tō ētē śikṣā raẏēchē."
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "79|27|Tōmādērakē [1] sr̥ṣṭi karā kaṭhina, nā āsamāna sr̥ṣṭi? Tini'i tā nirmāṇa karēchēna [2]"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "79|28|tini ēra chādakē su'ucca karēchēna ō subin'yasta karēchēna."
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "79|29|Āra tini ēra rātakē karēchēna andhakārācchanna ēbaṁ prakāśa karēchēna ēra sūryālōka"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "79|30|āra yamīnakē ēra para bistr̥ta karēchēna [1]."
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "79|31|Tini tā thēkē bēra karēchēna tāra pāni ō tr̥ṇabhūmi"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "79|32|āra parbatakē tini dr̥ṛhabhābē prōthita karēchēna"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "79|33|ēsaba tōmādēra ō tōmādēra catuṣpada jantugulōra bhōgēra jan'ya."
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "79|34|Ataḥpara yakhana mahāsaṅkaṭa upasthita habē [1]"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "79|35|mānuṣa yā karēchē tā sē sēdina smaraṇa karabē"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "79|36|āra prakāśa karā habē jāhānnāma darśakadēra jan'ya"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "79|37|sutarāṁ yē sīmālaṅghana karē"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "79|38|ēbaṁ duniẏāra jībanakē agraādhikāra dēẏa."
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "79|39|Jāhānnāma'i habē tāra ābāsa [1]."
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "79|40|Āra yē tāra rabēra abasthānakē [1] bhaẏa karē ēbaṁ kuprabr̥tti hatē nijakē birata rākhē"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "79|41|jānnāta'i habē tāra ābāsa."
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "79|42|Tārā āpanākē jijñēsa karē, ‘kiẏāmata samparkē, tā kakhana ghaṭabē?’"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "79|43|Tā ālōcanāra ki jñāna āpanāra āchē"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "79|44|ēra parama jñāna āpanāra rabēra'i kāchē [1]"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "79|45|yē ēṭāra bhaẏa rākhē āpani śudhu tāra satarkakārī."
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "79|46|Yēdina tārā tā dēkhatē pābē sēdina tādēra manē habē yēna tārā duniẏāẏa mātra ēka sandhyā athabā ēka prabhāta abasthāna karēchē [1]"
        }
    ]
}