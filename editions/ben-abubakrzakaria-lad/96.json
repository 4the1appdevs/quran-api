{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "96|1|paṛuna āpanāra rabēra nāmē, yini sr̥ṣṭi karēchēna [1] –"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "96|2|sr̥ṣṭi karēchēna mānuṣakē ‘ālāka’ hatē [1]."
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "96|3|Paṛuna, āra āpanāra raba mahāmahimānbita [1]"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "96|4|yini kalamēra sāhāyyē śikṣā diẏēchēna [1] –"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "96|5|śikṣā diẏēchēna mānuṣakē yā sē jānata nā [1]."
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "96|6|Bāstabē'i [1], mānuṣa sīmālaṅghana'i karē thākē"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "96|7|kāraṇa sē nijakē amukhāpēkṣī manē karē [1]."
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "96|8|Niścaẏa āpanāra rabēra kāchē'i phirē yā'ōẏā [1]."
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "96|9|Āmākē jānā'ō (ēbaṁ āścarya ha'ō) tāra samparkē, yē bādhā dēẏa"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "96|10|ēka bāndākē [1]- yakhana tini sālāta ādāẏa karēna."
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "96|11|Āmākē bala! Yadi tini hidāẏātēra upara thākēna"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "96|12|athabā tākōẏāra nirdēśa dēna; (tārapara'ō sē kibhābē bādhā dēẏa)"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "96|13|āmākē bala! Yadi sē (niṣēdhakārī) mithyārōpa karē ēbaṁ mukha phiriẏē nēẏa"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "96|14|sē ki jānē nā yē, niścaẏa āllāh dēkhēna [1]"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "96|15|kakhanō naẏa, sē yadi birata nā haẏa tabē āmarā tākē abaśya'i hēm̐caṛē niẏē yāba, māthāra sāmanēra culēra guccha dharē [1]"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "96|16|mithyācārī, pāpiṣṭha sam'mukha-culēra-guccha."
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "96|17|Ata'ēba sē tāra pāriṣadakē ḍēkē ānuka"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "96|18|śīghra'i āmarā ḍēkē ānaba yābāniẏādērakē [1]."
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "96|19|Kakhanō naẏa! Āpani tāra anusaraṇa karabēna nā. Āra āpani sājdā karuna ēbaṁ nikaṭabartī hōna [1]."
        }
    ]
}