{
    "pages": [
        {
            "chapter": 85,
            "verse": 1,
            "text": "85|1|Śapatha burūjabiśiṣṭa [1] āsamānēra"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "85|2|āra pratiśruta dinēra"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "85|3|ēbaṁ draṣṭā ō dr̥ṣṭēra [1]"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "85|4|abhiśapta haẏēchila [1] kuṇḍēra adhipatirā--- [2]"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "85|5|yē kuṇḍē chila indhanapūrṇa āguna"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "85|6|yakhana tārā ēra pāśē upabiṣṭa chila"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "85|7|ēbaṁ tārā muminadēra sāthē yā karachila tā pratyakṣa karachila."
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "85|8|Āra tārā tādērakē niryātana karēchila śudhu ē kāraṇē yē, tārā īmāna ēnēchila parākramaśālī ō praśansāra yōgya āllāhara upara"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "85|9|āsamānamūha ō yamīnēra sarbamaẏa kartr̥tba yām̐ra; āra āllāh sabakichura pratyakṣadarśī."
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "85|10|Niścaẏa yārā mumina nara-nārīkē bipadāpanna karēchē [1] tārapara tā'ōbā karēni [2] tādēra jan'ya āchē jāhānnāmēra śāsti, āra tādēra jan'ya āchē dahana yantraṇā [3]."
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "85|11|Niścaẏa yārā īmāna ēnēchē ēbaṁ saṯkāja karēchē tādēra jan'ya raẏēchē jānnāta, yāra pādadēśē nadī prabāhita; ēṭā'i mahāsāphalya."
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "85|12|Niścaẏa āpanāra rabēra pākaṛā'ō baṛa'i kaṭhina."
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "85|13|Tini'i astitba dāna karēna ō punarābartana ghaṭāna"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "85|14|ēbaṁ tini kṣamāśīla, atisnēhamaẏa [1]"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "85|15|āraśēra adhikārī ō sam'mānita."
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "85|16|Tini yā icchē tā-i karēna [1]."
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "85|17|Āpanāra kāchē ki paum̐chēchē sain'yabāhinīra br̥ttānta"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "85|18|phira‘ā'una ō sāmūdēra"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "85|19|tabu kāphirarā mithyārōpa karāẏa rata"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "85|20|Āra āllāh sabadika thēkē tādērakē paribēṣṭana karē raẏēchēna."
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "85|21|Bastuta ēṭā sam'mānita kura'āna"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "85|22|sanrakṣita phalakē lipibad'dha."
        }
    ]
}