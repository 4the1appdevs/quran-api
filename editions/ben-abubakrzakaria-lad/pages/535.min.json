{"pages":[{"chapter":56,"verse":17,"text":"56|17|Tādēra āśēpāśē ghurāphirā karabē cira - kiśōrērā [1]"},{"chapter":56,"verse":18,"text":"56|18|pānapātra, jaga ō prasrabaṇa niḥsr̥ta surāpūrṇa pēẏālā niẏē [1]."},{"chapter":56,"verse":19,"text":"56|19|Sē surā pānē tādēra śiraḥpīṛā habē nā, tārā jñānahārā'ō habē nā--- [1]"},{"chapter":56,"verse":20,"text":"56|20|Āra (ghōrāphērā karabē) tādēra pachandamata phalamūla niẏē [1]"},{"chapter":56,"verse":21,"text":"56|21|āra tādēra īnsita pākhīra gōśata niẏē [1]."},{"chapter":56,"verse":22,"text":"56|22|Āra tādēra jan'ya thākabē ḍāgara cakṣubiśiṣṭā hūra"},{"chapter":56,"verse":23,"text":"56|23|yēna tārā surakṣita muktā [1]"},{"chapter":56,"verse":24,"text":"56|24|tādēra kājēra puraskārasbarūpa."},{"chapter":56,"verse":25,"text":"56|25|Sēkhānē tārā śunabē nā kōna asāra bā pāpabākya [1]"},{"chapter":56,"verse":26,"text":"56|26|‘sālāma’ āra ‘sālāma’ bāṇī chāṛā."},{"chapter":56,"verse":27,"text":"56|27|Āra ḍāna dikēra dala, kata bhāgyabāna ḍāna dikēra dala"},{"chapter":56,"verse":28,"text":"56|28|tārā thākabē ēmana udyānē, yātē āchē [1] kām̐ṭāhīna kulagācha [2]"},{"chapter":56,"verse":29,"text":"56|29|ēbaṁ kām̐di bharā kalā gācha"},{"chapter":56,"verse":30,"text":"56|30|āra samprasārita chāẏā [1]"},{"chapter":56,"verse":31,"text":"56|31|āra sadā prabāhamāna pāni"},{"chapter":56,"verse":32,"text":"56|32|ō pracura phalamūla"},{"chapter":56,"verse":33,"text":"56|33|yā śēṣa habē nā ō yā niṣid'dha'ō habēnā [1]."},{"chapter":56,"verse":34,"text":"56|34|Āra samucca śayyāsamūha [1]"},{"chapter":56,"verse":35,"text":"56|35|niścaẏa āmarā tādērakē sr̥ṣṭi karēchi biśēṣarūpē [1]"},{"chapter":56,"verse":36,"text":"56|36|ataḥpara tādērakē karēchi kumārī [1]"},{"chapter":56,"verse":37,"text":"56|37|sōhāginī [1] ō samabaẏaskā [2]"},{"chapter":56,"verse":38,"text":"56|38|ḍānadikēra lōkadēra jan'ya."},{"chapter":56,"verse":39,"text":"56|39|Tādēra anēkē habē pūrbabartīdēra madhya thēkē"},{"chapter":56,"verse":40,"text":"56|40|ēbaṁ anēkē habē parabartīdēra madhya thēkē [1]."},{"chapter":56,"verse":41,"text":"56|41|Āra bāma dikēra dala, kata hatabhāgya bāmadikēra dala"},{"chapter":56,"verse":42,"text":"56|42|tārā thākabē atyanta uṣṇa bāẏu ō uttapta pānitē"},{"chapter":56,"verse":43,"text":"56|43|āra kālōbarṇēra dhūm̐ẏāra chāẏāẏa"},{"chapter":56,"verse":44,"text":"56|44|yā śītala naẏa, ārāmadāẏaka'ō naẏa."},{"chapter":56,"verse":45,"text":"56|45|Itōpūrbē tārā tō magna chila bhōga-bilāsē"},{"chapter":56,"verse":46,"text":"56|46|āra tārā abirāma lipta chila ghōratara pāpakājē."},{"chapter":56,"verse":47,"text":"56|47|Āra tārā balata, ‘marē asthi ō māṭitē pariṇata halē'ō ki āmādērakē uṭhānō habē"},{"chapter":56,"verse":48,"text":"56|48|ēbaṁ āmādēra pitr̥puruṣarā'ō?’"},{"chapter":56,"verse":49,"text":"56|49|Baluna, ‘abaśya'i pūrbabartīrā ō parabartīrā"},{"chapter":56,"verse":50,"text":"56|50|sabā'ikē ēkatra karā habē ēka nirdhārita dinēra nirdiṣṭa samaẏē."}]}