{"chapter":[{"chapter":88,"verse":1,"text":"88|1|Āpanāra kāchē ki ācchannakārīra (kiẏāmatēra) sambāda ēsēchē"},{"chapter":88,"verse":2,"text":"88|2|sēdina anēka cēhārā habē abanata [1]"},{"chapter":88,"verse":3,"text":"88|3|kliṣṭa, klānta [1]"},{"chapter":88,"verse":4,"text":"88|4|tārā prabēśa karabē jbalanta āgunē [1]"},{"chapter":88,"verse":5,"text":"88|5|tādērakē atyanta uṣṇa prasrabaṇa thēkē pāna karānō habē"},{"chapter":88,"verse":6,"text":"88|6|tādēra jan'ya khādya thākabē nā kām̐ṭāyukta gulma chāṛā [1]"},{"chapter":88,"verse":7,"text":"88|7|yā tādērakē puṣṭa karabē nā ēbaṁ tādēra kṣudhā nibr̥tta karabē nā."},{"chapter":88,"verse":8,"text":"88|8|Anēka mukhamaṇḍala sēdina habē ānandōjjbala"},{"chapter":88,"verse":9,"text":"88|9|nijēdēra kājēra sāphalyē paritr̥pta [1]"},{"chapter":88,"verse":10,"text":"88|10|su'ucca jānnātē"},{"chapter":88,"verse":11,"text":"88|11|sēkhānē tārā asāra bākya śunabē nā [1]"},{"chapter":88,"verse":12,"text":"88|12|sēkhānē thākabē bahamāna prasrabaṇa"},{"chapter":88,"verse":13,"text":"88|13|sēkhānē thākabē unnata [1] śayyāsamūha"},{"chapter":88,"verse":14,"text":"88|14|āra prastuta thākabē pānapātra"},{"chapter":88,"verse":15,"text":"88|15|sāri sāri upādhāna"},{"chapter":88,"verse":16,"text":"88|16|ēbaṁ bichānā gālicā"},{"chapter":88,"verse":17,"text":"88|17|tabē ki tārā tākiẏē dēkhē nā uṭēra dikē, kibhābē tā sr̥ṣṭi karā haẏēchē"},{"chapter":88,"verse":18,"text":"88|18|ēbaṁ āsamānēra dikē, kibhābē tā urdhbē sthāpana karā haẏēchē"},{"chapter":88,"verse":19,"text":"88|19|ēbaṁ parbatamālāra dikē, kibhābē tā pratiṣṭhita karā haẏēchē"},{"chapter":88,"verse":20,"text":"88|20|ēbaṁ bhūtalēra dikē, kibhābē tā bistr̥ta karā haẏēchē [1]"},{"chapter":88,"verse":21,"text":"88|21|ata'ēba āpani upadēśa dina; āpani tō kēbala ēkajana upadēśa dātā [1]"},{"chapter":88,"verse":22,"text":"88|22|āpani tādēra upara śakti praẏōgakārī nana."},{"chapter":88,"verse":23,"text":"88|23|Tabē kē'u mukha phiriẏē nilē ō kupharī karalē"},{"chapter":88,"verse":24,"text":"88|24|āllāh tādērakē dēbēna mahāśāsti [1]."},{"chapter":88,"verse":25,"text":"88|25|Niścaẏa tādēra phirē āsā āmādēra'i kāchē"},{"chapter":88,"verse":26,"text":"88|26|tārapara tādēra hisēba-nikēśa āmādēra'i kāja."}]}