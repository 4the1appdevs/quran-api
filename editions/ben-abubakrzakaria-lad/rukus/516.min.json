{"rukus":[{"chapter":77,"verse":1,"text":"77|1|Śapatha kalyāṇasbarūpa prērita bāẏura"},{"chapter":77,"verse":2,"text":"77|2|ataḥpara pralaẏaṅkarī jhaṭikāra"},{"chapter":77,"verse":3,"text":"77|3|śapatha pracaṇḍa sañcālanakārīra"},{"chapter":77,"verse":4,"text":"77|4|ataḥpara suspaṣṭarūpē pārthakyakārīra"},{"chapter":77,"verse":5,"text":"77|5|ataḥpara tādēra, yārā mānuṣēra antarē paum̐chē dēẏa upadēśa--- [1]"},{"chapter":77,"verse":6,"text":"77|6|ōyara-āpatti rahitakaraṇa ō satarka karāra jan'ya [1]"},{"chapter":77,"verse":7,"text":"77|7|Niścaẏa tōmādērakē yē pratiśruti dēẏā haẏēchē tā abaśyambhābī."},{"chapter":77,"verse":8,"text":"77|8|Yakhana nakṣatrarājira ālō nirbāpita karā habē"},{"chapter":77,"verse":9,"text":"77|9|āra yakhana ākāśa bidīrṇa karā habē"},{"chapter":77,"verse":10,"text":"77|10|āra yakhana parbatamālā cūrṇabicūrṇa karā habē"},{"chapter":77,"verse":11,"text":"77|11|āra yakhana rāsūlagaṇakē nirdhārita samaẏē upasthita karā habē [1]"},{"chapter":77,"verse":12,"text":"77|12|ēsaba sthagita rākhā haẏēchē kōn dinēra jan'ya"},{"chapter":77,"verse":13,"text":"77|13|bicāra dinēra jan'ya."},{"chapter":77,"verse":14,"text":"77|14|Āra āpanākē kisē jānābē bicāra dina kī"},{"chapter":77,"verse":15,"text":"77|15|sēdina durbhōga mithyārōpakārīdēra jan'ya [1]."},{"chapter":77,"verse":16,"text":"77|16|Āmarā ki pūrbabartīdērakē dhbansa karini"},{"chapter":77,"verse":17,"text":"77|17|tārapara āmarā parabartīdērakē tādēra anugāmī karaba [1]."},{"chapter":77,"verse":18,"text":"77|18|Aparādhīdēra prati āmarā ērūpa'i karē thāki."},{"chapter":77,"verse":19,"text":"77|19|Sēdina durbhōga mithyārōpakārīdēra jan'ya."},{"chapter":77,"verse":20,"text":"77|20|Āmarā ki tōmādērakē tuccha pāni hatē sr̥ṣṭi karini"},{"chapter":77,"verse":21,"text":"77|21|tārapara āmarā tā rēkhēchi nirāpada ādhārē [1]"},{"chapter":77,"verse":22,"text":"77|22|ēka nirdiṣṭa kāla paryanta"},{"chapter":77,"verse":23,"text":"77|23|ataḥpara āmarā parimāpa karēchi, sutarāṁ āmarā kata nipuṇa parimāpakārī [1]"},{"chapter":77,"verse":24,"text":"77|24|sēdina durbhōga mithyārōpakārīdēra jan'ya [1]."},{"chapter":77,"verse":25,"text":"77|25|Āmarā ki yamīnakē sr̥ṣṭi karini dhāraṇakārīrūpē"},{"chapter":77,"verse":26,"text":"77|26|jībita ō mr̥tēra jan'ya [1]"},{"chapter":77,"verse":27,"text":"77|27|āra āmarā tātē sthāpana karēchi sudr̥ṛha ucca parbatamālā ēbaṁ tōmādērakē pāna kariẏēchi supēẏa pāni [1]."},{"chapter":77,"verse":28,"text":"77|28|Sēdina durbhōga mithyārōpakārīdēra jan'ya [1]."},{"chapter":77,"verse":29,"text":"77|29|Tōmarā yātē mithyārōpa karatē, cala tāra'i dikē."},{"chapter":77,"verse":30,"text":"77|30|Cala tina śākhābiśiṣṭa āgunēra chāẏāra dikē"},{"chapter":77,"verse":31,"text":"77|31|yē chāẏā śītala naẏa ēbaṁ yā rakṣā karē nā agniśikhā hatē"},{"chapter":77,"verse":32,"text":"77|32|niścaẏa jāhānnāma uṯkṣēpana karabē br̥haṯ sphuliṅga aṭṭālikātulya"},{"chapter":77,"verse":33,"text":"77|33|tā yēna pītabarṇa uṭēra śrēṇī [1]"},{"chapter":77,"verse":34,"text":"77|34|sēdina durbhōga mithyārūpakārīdēra jan'ya."},{"chapter":77,"verse":35,"text":"77|35|Ēṭā ēmana ēka dina yēdina nā tārā kathā balabē [1]"},{"chapter":77,"verse":36,"text":"77|36|āra nā tādērakē anumati dēẏā habē ōyara pēśa karāra."},{"chapter":77,"verse":37,"text":"77|37|Sēdina durbhōga mithyārōpakārīdēra jan'ya."},{"chapter":77,"verse":38,"text":"77|38|‘Ēṭā'i phaẏasālāra dina, āmarā ēkatra karēchi tōmādērakē ēbaṁ pūrbabartīdērakē.’"},{"chapter":77,"verse":39,"text":"77|39|Ataḥpara tōmādēra kōnō kauśala thākalē tā praẏōga kara āmāra birud'dhē [1]."},{"chapter":77,"verse":40,"text":"77|40|Sēdina durbhōga mithyārōpakārīdēra jan'ya."}]}