{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "51|1|Śapatha [1] dhūlijhañjhāra"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "51|2|ataḥpara bōjhābahanakārī mēghapuñjēra"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "51|3|ataḥpara sbacchandagati nauyānēra"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "51|4|ataḥpara nirdēśa banṭanakārī phērēśatāgaṇēra"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "51|5|tōmādērakē pradatta pratiśruti abaśya'i satya."
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "51|6|Niścaẏa pratidāna abaśyambhābī."
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "51|7|Śapatha bahu pathabiśiṣṭa āsamānēra [1]"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "51|8|niścaẏa tōmarā paraspara birōdhī kathāẏa lipta [1]."
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "51|9|Phiriẏē rākhā haẏa tā thēkē yē phirē thākē [1]."
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "51|10|Dhbansa hōka mithyācārīrā [1]"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "51|11|yārā sandēha-sanśaẏē nipatita, udāsīna"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "51|12|tārā jijñēsā karē, ‘pratidāna dibasa kabē habē?’"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "51|13|‘Yē dina tārā āgunē sājāprāpta habē.’"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "51|14|Balā habē ‘tōmārā tōmādēra śāsti [1] āsbādana kara, tōmarā ē śāsti'i tbarānbita karatē cēẏēchilē.’"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "51|15|Niścaẏa muttākīrā thākabē jānnātasamūhē ō jharṇādhārāẏa"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "51|16|Grahaṇa karabē tā yā tādēra raba tādērakē dibēna; niścaẏa itōpūrbē tārā chila saṯkarmaśīla"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "51|17|tārā rātēra sāmān'ya anśa'i atibāhita karata nidrāẏa [1]"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "51|18|āra rātēra śēṣa praharē tārā kṣamā prārthanā karata [1]"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "51|19|āra tādēra dhana–sampadē raẏēchē bhikṣuka ō bañcitēra haka [1]."
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "51|20|Āra niścita biśbāsīdēra jan'ya nidarśanasamūha raẏēchē yamīnē [1]"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "51|21|ēbaṁ tōmādēra nijēdēra madhyē'ō. Tabu'ō tōmarā ki cakṣuṣmāna habē nā"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "51|22|āra āsamānē raẏēchē tōmādēra riyika ō pratiśruta saba kichu [1]."
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "51|23|Ata'ēba, āsamāna ō yamīnēra rabēra śapatha! Niścaẏa tōmarā yē kathā balē thāka tāra mata'i ēṭi satya [1]."
        }
    ]
}