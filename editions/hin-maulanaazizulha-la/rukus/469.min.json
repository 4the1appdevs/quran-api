{"rukus":[{"chapter":56,"verse":1,"text":"56|1|jab hone vaalee, ho jaayegee."},{"chapter":56,"verse":2,"text":"56|2|usaka hona koee jhooth nahin hai."},{"chapter":56,"verse":3,"text":"56|3|neecha-ooncha karane[1] vaalee."},{"chapter":56,"verse":4,"text":"56|4|jab dharatee tezee se dolane lagegee."},{"chapter":56,"verse":5,"text":"56|5|aur choor-choor kar diye jaayenge parvat."},{"chapter":56,"verse":6,"text":"56|6|phir ho jaayenge bikharee huee dhool."},{"chapter":56,"verse":7,"text":"56|7|tatha tum ho jaoge teen samooh."},{"chapter":56,"verse":8,"text":"56|8|to daayen vaale, to kya hain daayen vaale"},{"chapter":56,"verse":9,"text":"56|9|aur baayen vaale, to kya hain baayen vaale"},{"chapter":56,"verse":10,"text":"56|10|aur agragaamee to agragaamee hee hain."},{"chapter":56,"verse":11,"text":"56|11|vahee sameep kiye[1] hue hain."},{"chapter":56,"verse":12,"text":"56|12|ve sukhon ke svargon mein honge."},{"chapter":56,"verse":13,"text":"56|13|bahut-se agale logon mein se."},{"chapter":56,"verse":14,"text":"56|14|tatha kuchh pichhale logon mein se honge."},{"chapter":56,"verse":15,"text":"56|15|svarn se bune hue takhton par."},{"chapter":56,"verse":16,"text":"56|16|takiye lagaaye unapar, ek-doosare ke sammukh (aaseen) honge."},{"chapter":56,"verse":17,"text":"56|17|phirate honge unakee seva ke lie baalak, jo sada (baalak) rahenge."},{"chapter":56,"verse":18,"text":"56|18|pyaale tatha suraahî€¼iyaan lekar tatha madira ke chhalakate pyaale."},{"chapter":56,"verse":19,"text":"56|19|na to sir chakaraayega unase, na ve nirbodh honge."},{"chapter":56,"verse":20,"text":"56|20|tatha jo phal ve chaahenge."},{"chapter":56,"verse":21,"text":"56|21|tatha pakshee ka jo maans ve chaahenge."},{"chapter":56,"verse":22,"text":"56|22|aur goriyaan bade nainon vaalee."},{"chapter":56,"verse":23,"text":"56|23|chhupaakar rakhee hueen motiyon ke samaan."},{"chapter":56,"verse":24,"text":"56|24|usake badale, jo ve (sansaar mein) karate rahe."},{"chapter":56,"verse":25,"text":"56|25|nahin sunenge unamen vyarth baat aur na paap kee baat."},{"chapter":56,"verse":26,"text":"56|26|keval salaam hee salaam kee dhvani hogee."},{"chapter":56,"verse":27,"text":"56|27|aur daayen vaale, kya (hee bhaagyashaalee) hain daayen vaale"},{"chapter":56,"verse":28,"text":"56|28|bin kaante kee bairee mein honge."},{"chapter":56,"verse":29,"text":"56|29|tatha tah par tah kelon mein."},{"chapter":56,"verse":30,"text":"56|30|phailee huee chhaaya[1] mein."},{"chapter":56,"verse":31,"text":"56|31|aur pravaahit jal mein."},{"chapter":56,"verse":32,"text":"56|32|tatha bahut-se phalon mein."},{"chapter":56,"verse":33,"text":"56|33|jo na samaapt honge, na roke jaayenge."},{"chapter":56,"verse":34,"text":"56|34|aur oonche bistar par."},{"chapter":56,"verse":35,"text":"56|35|hamane banaaya hai (unakee) patniyon ko ek vishesh roop se."},{"chapter":56,"verse":36,"text":"56|36|hamane banaay hai unhen kumaariyaan."},{"chapter":56,"verse":37,"text":"56|37|premikaayen samaayu."},{"chapter":56,"verse":38,"text":"56|38|daahine vaalon ke lie."}]}