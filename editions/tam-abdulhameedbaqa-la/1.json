        {
            "chapter": 1,
            "verse": 1,
            "text": "1|1|Alavarra arulalanum, nikararra anputaiyonumakiya allahvin tiruppeyaral (otukiren)"
        },
        {
            "chapter": 1,
            "verse": 2,
            "text": "1|2|ellap pukalum allahvukke! (Avantan) akilattar anaivaraiyum pataittu valarttu takunta muraiyil pakkuvappatuttupavan"
        },
        {
            "chapter": 1,
            "verse": 3,
            "text": "1|3|(avantan) alavarra arulalan, nikararra anputaiyavan"
        },
        {
            "chapter": 1,
            "verse": 4,
            "text": "1|4|tirppu nalin atipati(yum avane)"
        },
        {
            "chapter": 1,
            "verse": 5,
            "text": "1|5|(allahve!) Nankal unnaiye vanankukirom; unnitame utavi tetukirom"
        },
        {
            "chapter": 1,
            "verse": 6,
            "text": "1|6|ni enkalai nerana valiyil natattuvayaka"
        },
        {
            "chapter": 1,
            "verse": 7,
            "text": "1|7|(avvali) evarkalukku ni arul purintayo avarkal (cenra) vali.(Un) kopattirkullanavarkalo valitavariyavarkalo cenra valiyalla"
        }
    ]
