{"rukus":[{"chapter":92,"verse":1,"text":"92|1|(anaittaiyum) mutikkollum (irunta) iravin mitu cattiyamaka"},{"chapter":92,"verse":2,"text":"92|2|pirakacamulla pakalin mitu cattiyamaka"},{"chapter":92,"verse":3,"text":"92|3|anaiyum pennaiyum pataittavan mitu cattiyamaka"},{"chapter":92,"verse":4,"text":"92|4|(manitarkale!) Niccayamaka unkal muyarcikal palavaraka irukkinrana"},{"chapter":92,"verse":5,"text":"92|5|akave, (unkalil) evar tanam ceytu (allahvukkup) payantu"},{"chapter":92,"verse":6,"text":"92|6|(inta markkattilulla) nalla kariyankalaiyum (nallatenre) unmaiyakki vaikkiraro"},{"chapter":92,"verse":7,"text":"92|7|avarukku corkkap pataiyai nam elitakkit taruvom"},{"chapter":92,"verse":8,"text":"92|8|evan kancattanam ceytu (allahvaiyum) porutpatuttatu"},{"chapter":92,"verse":9,"text":"92|9|(im'markkattilulla) nalla kariyankalaiyum poyyakki vaikkirano"},{"chapter":92,"verse":10,"text":"92|10|Avanukkuk (kastattirkuriya) narakap pataiyaittan nam elitakki vaippom"},{"chapter":92,"verse":11,"text":"92|11|avan (narakattil) viluntuvittal, avanutaiya porul avanukku (oru) payanumalikkatu"},{"chapter":92,"verse":12,"text":"92|12|niccayamaka nervaliyai arivippatu nam'mitutan katamaiyakum"},{"chapter":92,"verse":13,"text":"92|13|niccayamaka im'maiyum, marumaiyum namakke contamanavai"},{"chapter":92,"verse":14,"text":"92|14|(makkavacikale!) Koluntu vitteriyum neruppaip parri nan unkalukku accamutti eccarikkai ceykiren"},{"chapter":92,"verse":15,"text":"92|15|mikka turpakkiyam utaiyavanait tavira, (marrevanum) atarkul cellamattan"},{"chapter":92,"verse":16,"text":"92|16|avan (nam vacanankalaip) poyyakkip purakkanittuvituvan"},{"chapter":92,"verse":17,"text":"92|17|iraiyaccamutaiyavartan atiliruntu tappittukkolvar"},{"chapter":92,"verse":18,"text":"92|18|avar (pavattiliruntu tannaip) paricuttamakkik kolvatarkaka tan porulai(t tanamaka)k kotuppar"},{"chapter":92,"verse":19,"text":"92|19|tan patil nanmai ceyyakkutiyavaru evarutaiya nanriyum tan mitu irukkatu"},{"chapter":92,"verse":20,"text":"92|20|iruppinum, mikka melana tan iraivanin tirumukattai virumpiye tavira (veru etarkakavum tanam ceyya mattar)"},{"chapter":92,"verse":21,"text":"92|21|(iraivan avarukku alikkum kotaiyaip parrip) pinnar avarum tiruptiyataivar"}]}