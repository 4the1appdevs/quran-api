{
    "pages": [
        {
            "chapter": 77,
            "verse": 20,
            "text": "77|20|Ojo sumoro az oʙe past [-u nociz] naofaridem"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "77|21|Ki sipas onro dar qarorgohe mahfuz [rahim] qaror dodem"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "77|22|To zamone muajjan"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "77|23|Pas, mo [ʙar in kor] tavono ʙudem va ci nek tavono [va qudratmand] hastem"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "77|24|Dar on ruz voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "77|25|Ojo zaminro cojgohi [tacammui mardum] qaror nadodem"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "77|26|Ham dar holi hajot va ham margason"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "77|27|Va dar on kuhhoi ʙisjor ʙaland [va ustuvor] qaror dodem va oʙe sirin [va guvoro] ʙa sumo nusonidem"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "77|28|Dar on ruz voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "77|29|[Ba onho gufta mesavad] «Ba suji hamon cize ʙiraved, ki pajvasta takziʙas mekarded"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "77|30|Biraved ʙa suji sojai [dudhoi otasi] sesoxa"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "77|31|Na sojaafkan [va xunuk] ast va na az [garmii] su'lahoi otas cilavgiri mekunad»"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "77|32|Hamono on [duzax] sarorahoe cun koxe [ʙaland] meafkanad"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "77|33|Gui, ki on [saroraho] suturoni zardrang hastand"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "77|34|Dar on ruz voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "77|35|In [hamon] ruzest, ki suxan namegujand"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "77|36|Va ʙa onho icozat doda namesavad, to uzrxohi kunand"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "77|37|Dar on ruz, voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "77|38|In [hamon] ruzi cudoi [va dovari] ast, ki sumo va guzastagonro gird ovardaem"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "77|39|Pas, agar [hila va] najrange dored, onro dar haqqi man ʙa kor gired"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "77|40|Dar on ruz voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "77|41|Ba rosti, ki [dar on ruz] parhezkoron dar sojaho va [kanori] casmaho qaror dorand"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "77|42|Va mevahoe, ki majl dosta ʙosand"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "77|43|[Ba onho gufta mesavad] «Ba podosi on ci mekarded, guvoro ʙixured va ʙijosomed»"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "77|44|Mo in guna nakukoronro podos medihem»"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "77|45|Dar on ruz voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "77|46|«[Ej kofiron, dar in dunjo] andake ʙixured va ʙahra gired, zero sumo gunahgored»"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "77|47|Dar on ruz voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "77|48|Va hangome ki ʙa onho gufta savad: «[Namoz ʙiguzored va] ruku' kuned, [namoz nameguzorand va] ruku' namekunand"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "77|49|Dar on ruz voj ʙar takziʙkunandagon"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "77|50|[Agar mardum ʙa in Qur'on imon nameovarand] Pas, ʙa'd az on ʙa kadom suxan imon meovarand"
        }
    ]
}