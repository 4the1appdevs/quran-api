{
    "pages": [
        {
            "chapter": 51,
            "verse": 52,
            "text": "51|52|E'idarae sihamtara purbarartisakalara majata yetiya'i kono raachula ahiche, sihamte'i kaiche, ‘e'om ejana yadukara naha’le unmada’."
        },
        {
            "chapter": 51,
            "verse": 53,
            "text": "51|53|Sihamte ijane sijanaka e'i bisaye achiyata karaiche neki? Baram sihamta simalanghanakarai sampradaya."
        },
        {
            "chapter": 51,
            "verse": 54,
            "text": "51|54|Eteke tumi sihamtaka upeksa karaa, tomara kono dosa naha’ba."
        },
        {
            "chapter": 51,
            "verse": 55,
            "text": "51|55|Arau tumi upadesa di thaka, karana niscaya upadesa muminasakalara upakarata ahe."
        },
        {
            "chapter": 51,
            "verse": 56,
            "text": "51|56|Arau ma'i jina arau manuhaka kerala e'i babe'i srsti karaicho ye, sihamta kerala morae'i ibadata karaiba."
        },
        {
            "chapter": 51,
            "verse": 57,
            "text": "51|57|Ma'i sihamtara paraa kono jiraika nibicarao arau ma'i e'ito'o nibicarao ye, sihamte moka khuraaba."
        },
        {
            "chapter": 51,
            "verse": 58,
            "text": "51|58|Niscaya allahe'i jiraikadata, prabala saktidhara, paraakramasali."
        },
        {
            "chapter": 51,
            "verse": 59,
            "text": "51|59|Eteke yihamte an'yaya karaiche sihamtara babe ache sihamtara samamatalambisakalara darae praapya (sasti); gatike sihamte kharakheda karaiba nalage."
        },
        {
            "chapter": 51,
            "verse": 60,
            "text": "51|60|Eteke yihamte kupharai karaiche sihamtara babe se'idinara dhbansa, yi dinatora bisaye sihamtaka satarka karaa haiche."
        },
        {
            "chapter": 52,
            "verse": 1,
            "text": "52|1|Sapata tura parbatara"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "52|2|sapata kitabara yito lipibad'dha ache"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "52|3|unmukta patata."
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "52|4|Sapata abada grhara"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "52|5|sapata su'ucca cadara"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "52|6|sapata taranga-biksubdha uttala sagarara"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "52|7|niscaya tomara pratipalakara sasti arasyambharai"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "52|8|iyara pratiraodhakarai kono na'i."
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "52|9|Yidina prabalabharae akasakhana prakampita ha’ba"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "52|10|arau parbatasamuha drautagatita paraibhramana karaiba"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "52|11|eteke sarbanasa se'idina asbikarakaraisakalara babe"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "52|12|yihamte khela-dhemalira chalanarae asara karmata lipta thake."
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "52|13|Se'idina sihamtaka jahannamara ju'ira phale theli-heci lai yoraa ha’ba"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "52|14|‘e'itorae se'i jahannama yaka tomaloke asbikara karaichila’."
        }
    ]
}