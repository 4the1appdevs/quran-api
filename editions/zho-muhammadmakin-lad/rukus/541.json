        {
            "chapter": 99,
            "verse": 1,
            "text": "99|1|Dāng dàdì měngliè dìzhèn dòng,"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "99|2|pāo qí zhòngdàn,"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "99|3|rénmen shuō:“Dàdì zěnme la?”"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "99|4|Zài nà rì, dàdì jiāng bàogào tā de xiāoxī."
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "99|5|Yīnwèi nǐ de zhǔ yǐ qǐshìle tā;"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "99|6|zài nà rì, rénmen jiāng fēnfēn dì lísàn, yǐbiàn tāmen dé jiàn zìjǐ xíngwéi de bàoyìng."
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "99|7|Xíng yīgè xiǎo mǎyǐ zhòng de shànshì zhě, jiāng jiàn qí bàochóu;"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "99|8|zuò yīgè xiǎo mǎyǐ zhòng de è shì zhě, yě jiāng jiàn qí è bào."
