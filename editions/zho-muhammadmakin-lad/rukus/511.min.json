{"rukus":[{"chapter":74,"verse":32,"text":"74|32|Zhēn de, yǐ yuèliàng méngshì,"},{"chapter":74,"verse":33,"text":"74|33|yǐ shìqù de hēiyè méngshì,"},{"chapter":74,"verse":34,"text":"74|34|yǐ xiǎn zhào dí límíng méngshì,"},{"chapter":74,"verse":35,"text":"74|35|huǒ yù què shì yīgè dà nàn,"},{"chapter":74,"verse":36,"text":"74|36|kěyǐ jǐnggào rénlèi,"},{"chapter":74,"verse":37,"text":"74|37|jǐnggào nǐmen zhōng yù qiánjìn zhě huò yù hòutuì zhě;"},{"chapter":74,"verse":38,"text":"74|38|gèrén jiāng yīn zìjǐ de yíng móu ér zuò dǐyā,"},{"chapter":74,"verse":39,"text":"74|39|wéi xìngfú de rénmen chúwài."},{"chapter":74,"verse":40,"text":"74|40|Tāmen zài lèyuán zhōng hùxiāng xúnwèn,"},{"chapter":74,"verse":41,"text":"74|41|wèn fànzuì rénmen de qíngzhuàng,"},{"chapter":74,"verse":42,"text":"74|42|nǐmen wèishéme duò rù huǒ yù ne? ”"},{"chapter":74,"verse":43,"text":"74|43|Tāmen shuō:“Wǒmen méiyǒu lǐbài,"},{"chapter":74,"verse":44,"text":"74|44|yě méiyǒu jìpín,"},{"chapter":74,"verse":45,"text":"74|45|wǒmen yǔ wàngyán de rénmen yīdào wàngyán,"},{"chapter":74,"verse":46,"text":"74|46|wǒmen fǒurèn bàoyìng rì,"},{"chapter":74,"verse":47,"text":"74|47|yīzhí dào sǐwáng jiànglínliǎo wǒmen.”"},{"chapter":74,"verse":48,"text":"74|48|Shuō qíng zhě de shuō qíng, jiāng wúyì yú tāmen."},{"chapter":74,"verse":49,"text":"74|49|Tāmen zěnme tuìbì zhè jiàoxùn ne?"},{"chapter":74,"verse":50,"text":"74|50|Tāmen hǎoxiàng yīqún jīnghuāng de lǘzi,"},{"chapter":74,"verse":51,"text":"74|51|gāng táobìle yī zhǐ shīzi yīyàng."},{"chapter":74,"verse":52,"text":"74|52|Bùrán, tāmen zhōng de měi gè rén dōu xīwàng huòdé yīxiē zhǎnkāi de tiān jīng."},{"chapter":74,"verse":53,"text":"74|53|Jué bùrán, tāmen bù wèijù hòushì!"},{"chapter":74,"verse":54,"text":"74|54|Zhēn de, zhè “gǔlánjīng” què shì yīgè jiàohuì!"},{"chapter":74,"verse":55,"text":"74|55|Shéi yuànyì, shéi jìyì tā,"},{"chapter":74,"verse":56,"text":"74|56|tāmen zhǐ yīn ān lā de yìyù ér jìyì tā. Tā shì yīng shòu jìngwèi de, tā shì yí yú shè yòu de."}]}