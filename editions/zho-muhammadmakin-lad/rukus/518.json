{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "78|1|Tāmen hùxiāng xúnwèn, xúnwèn shénme?"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "78|2|Xúnwèn nà zhòngdà de xiāoxī,"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "78|3|jiùshì tāmen suǒ zhēnglùn de xiāoxī."
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "78|4|Jué bùrán! Tāmen jiānglái jiù zhīdàole."
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "78|5|Jué bùrán, tāmen jiānglái jiù zhīdàole."
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "78|6|Nándào wǒ méiyǒu shǐ dà dì rú yáolán,"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "78|7|shǐ shānluán rú mù zhuāng ma?"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "78|8|Wǒ céng bǎ nǐmen zàochéng pèi'ǒu,"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "78|9|wǒ céng shǐ nǐmen cóng shuìmián zhōng dédào xiūxí,"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "78|10|wǒ céng yǐ hēiyè wèi wéimù,"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "78|11|wǒ yǐ báizhòu gōng móushēng,"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "78|12|wǒ céng zài nǐmen shàngmiàn jiànzàole qī céng jiāngù de tiān,"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "78|13|wǒ chuàngzào yī zhǎn míngdēng,"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "78|14|wǒ cóng hánshuǐ de yún lǐ, jiàngxià pāngtuó dàyǔ,"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "78|15|yǐbiàn wǒ jiè tā ér shēngchū bǎi gǔ hé cǎomù,"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "78|16|yǐjí màomì de yuánpǔ."
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "78|17|Pànjué zhī rì, què shì zhǐdìng de rìqí,"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "78|18|zài nà rì, hàojiǎo jiāng bèi chuī xiàng, nǐmen jiù chéng qún ér lái;"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "78|19|tiān jiāng bèi kāipì, yǒu xǔduō ménhù;"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "78|20|shānluán jiāng bèi yídòng, ér biàn chéng huànyǐng;"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "78|21|huǒ yù què shì cìhòuzhe."
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "78|22|Tā shì bèinì zhě de guīsù;"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "78|23|tāmen jiàng zài qízhōng dòuliú chángjiǔ de shíqí."
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "78|24|Tāmen zài qízhōng bùnéng shuìmián, bùdé yǐnliào,"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "78|25|Zhǐ yǐn fèishuǐ hé nóng zhī."
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "78|26|Nà shì yīgè hěn shìdàng de bàochóu."
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "78|27|Tāmen díquè bùpà qīngsuàn,"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "78|28|tāmen céng fǒurèn wǒ de jīxiàng,"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "78|29|wǒ céng jiāng wànshì jìlù zài yī běn tiān jīng lǐ."
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "78|30|(Jiāng duì tāmen shuō:) Nǐmen chángshì ba! Wǒ zhǐ zēngjiā nǐmen suǒ shòu de xíngfá."
        }
    ]
}