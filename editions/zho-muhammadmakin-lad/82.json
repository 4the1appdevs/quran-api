{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "82|1|Dāng cāngqióng pòliè de shíhòu,"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "82|2|dāngzhòng xīng piāo duò de shíhòu,"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "82|3|dāng hǎiyáng hùnhé de shíhòu,"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "82|4|dāng fénmù bèi jiē kāi de shíhòu,"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "82|5|měi gèrén dōu zhīdào zìjǐ qián qiánhòu hòu suǒ zuò de yīqiè shìqíng."
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "82|6|Rén a! Shénme dōngxī yǐnyòu nǐ bèilíle nǐ de réncí de zhǔ ne?"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "82|7|Tā céng chuàngzàole nǐ, ránhòu, shǐ nǐ jiànquán, ránhòu, shǐ nǐ yúnchèn."
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "82|8|Tā yìyù shénme xíngshì, jiù yī shénme xíngshì ér gòuzào nǐ."
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "82|9|Jué bùrán, dàn nǐmen fǒurèn bàoyìng!"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "82|10|Nǐmen de shàngmiàn, què yǒu xǔduō jiānshì zhě,"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "82|11|tāmen shì zūnguì de, shì jìlù de,"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "82|12|tāmen zhīdào nǐmen de yīqiè xíngwéi."
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "82|13|Shàn rénmen, bì zài ēnzé zhōng;"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "82|14|è rénmen, bì zài lièhuǒ zhōng."
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "82|15|Tāmen jiàng zài bàoyìng rì duò rù lièhuǒ,"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "82|16|tāmen jué bùdé líkāi tā."
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "82|17|Nǐ zěn néng zhīdào bàoyìng rì shì shénme?"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "82|18|Nǐ zěn néng zhīdào bàoyìng rì shì shénme?"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "82|19|Zài nà rì, rènhé rén duì rènhé rén bùnéng yǒu shé me bìyì; zài nà rì, mìnglìng quán guī ān lā."
        }
    ]
}