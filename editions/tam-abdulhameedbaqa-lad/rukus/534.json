{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "92|1|(aṉaittaiyum) mūṭikkoḷḷum (iruṇṭa) iraviṉ mītu cattiyamāka"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "92|2|pirakācamuḷḷa pakaliṉ mītu cattiyamāka"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "92|3|āṇaiyum peṇṇaiyum paṭaittavaṉ mītu cattiyamāka"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "92|4|(maṉitarkaḷē!) Niccayamāka uṅkaḷ muyaṟcikaḷ palavāṟāka irukkiṉṟaṉa"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "92|5|ākavē, (uṅkaḷil) evar tāṉam ceytu (allāhvukkup) payantu"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "92|6|(inta mārkkattiluḷḷa) nalla kāriyaṅkaḷaiyum (nallateṉṟē) uṇmaiyākki vaikkiṟārō"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "92|7|avarukku corkkap pātaiyai nām eḷitākkit taruvōm"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "92|8|evaṉ kañcattaṉam ceytu (allāhvaiyum) poruṭpaṭuttātu"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "92|9|(im'mārkkattiluḷḷa) nalla kāriyaṅkaḷaiyum poyyākki vaikkiṟāṉō"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "92|10|Avaṉukkuk (kaṣṭattiṟkuriya) narakap pātaiyaittāṉ nām eḷitākki vaippōm"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "92|11|avaṉ (narakattil) viḻuntuviṭṭāl, avaṉuṭaiya poruḷ avaṉukku (oru) payaṉumaḷikkātu"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "92|12|niccayamāka nērvaḻiyai aṟivippatu nam'mītutāṉ kaṭamaiyākum"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "92|13|niccayamāka im'maiyum, maṟumaiyum namakkē contamāṉavai"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "92|14|(makkāvācikaḷē!) Koḻuntu viṭṭeriyum neruppaip paṟṟi nāṉ uṅkaḷukku accamūṭṭi eccarikkai ceykiṟēṉ"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "92|15|mikka turpākkiyam uṭaiyavaṉait tavira, (maṟṟevaṉum) ataṟkuḷ cellamāṭṭāṉ"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "92|16|avaṉ (nam vacaṉaṅkaḷaip) poyyākkip puṟakkaṇittuviṭuvāṉ"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "92|17|iṟaiyaccamuṭaiyavartāṉ atiliruntu tappittukkoḷvār"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "92|18|avar (pāvattiliruntu taṉṉaip) paricuttamākkik koḷvataṟkāka taṉ poruḷai(t tāṉamāka)k koṭuppār"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "92|19|tāṉ patil naṉmai ceyyakkūṭiyavāṟu evaruṭaiya naṉṟiyum taṉ mītu irukkātu"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "92|20|iruppiṉum, mikka mēlāṉa taṉ iṟaivaṉiṉ tirumukattai virumpiyē tavira (vēṟu etaṟkākavum tāṉam ceyya māṭṭār)"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "92|21|(iṟaivaṉ avarukku aḷikkum koṭaiyaip paṟṟip) piṉṉar avarum tiruptiyaṭaivār"
        }
    ]
}