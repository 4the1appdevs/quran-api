{"rukus":[{"chapter":107,"verse":1,"text":"107|1|(napiyē!) Kūli koṭukkum nāḷaip poyyākkupavaṉai nīr (kavaṉittup) pārttīrā"},{"chapter":107,"verse":2,"text":"107|2|(Ātaravaṟṟa) anātaikaḷai veruṭṭupavaṉ avaṉtāṉ"},{"chapter":107,"verse":3,"text":"107|3|avaṉ ēḻaikaḷukku (uṇavaḷikkātatuṭaṉ) uṇavaḷikkumpaṭi (piṟarait) tūṇṭuvatumillai"},{"chapter":107,"verse":4,"text":"107|4|(kavaṉamaṟṟa) toḻukaiyāḷikaḷukkum kēṭutāṉ"},{"chapter":107,"verse":5,"text":"107|5|avarkaḷ taṅkaḷ toḻukaikaḷai viṭṭum maṟantavarkaḷāka irukkiṟārkaḷ"},{"chapter":107,"verse":6,"text":"107|6|(mēlum,) avarkaḷ (toḻutapōtilum makkaḷukkuk) kāṇpikkavē toḻukiṟārkaḷ"},{"chapter":107,"verse":7,"text":"107|7|(mēlum, ūci pōṉṟa) aṟpap poruḷaiyum (iraval koṭukkātu) taṭuttuk koḷkiṟārkaḷ"}]}