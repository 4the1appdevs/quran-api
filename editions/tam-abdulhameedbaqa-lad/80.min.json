{"chapter":[{"chapter":80,"verse":1,"text":"80|1|(nam napi) kaṭukaṭuttār; puṟakkaṇittār. (Etaṟkāka)"},{"chapter":80,"verse":2,"text":"80|2|taṉṉiṭam ōr pārvaiyaṟṟavar vantataṟkāka"},{"chapter":80,"verse":3,"text":"80|3|(napiyē! Um'miṭam vanta) avar paricuttavāṉāka irukkalām eṉpatai nīr aṟivīrā"},{"chapter":80,"verse":4,"text":"80|4|allatu avar nalluṇarvu peṟuvār. (Umatu) nallupatēcam avarukkup payaṉaḷikkalām (eṉpatai nīr aṟivīrā? Avvāṟirukka, avarai nīr ēṉ kaṭukaṭuttup puṟakkaṇittīr)"},{"chapter":80,"verse":5,"text":"80|5|(napiyē! Mārkkattai) evaṉ alaṭciyam ceykiṟāṉō"},{"chapter":80,"verse":6,"text":"80|6|avaṉai varavēṟpatil nīr atika ciramattai eṭuttuk koḷkiṟīr"},{"chapter":80,"verse":7,"text":"80|7|avaṉ paricuttavāṉāka ākāviṭṭāl ataip paṟṟi um mītu oru kuṟṟamum illai(yē)"},{"chapter":80,"verse":8,"text":"80|8|evar (tāṉākavē) um'miṭam ōṭi varukiṟārō"},{"chapter":80,"verse":9,"text":"80|9|avartāṉ (allāhvukkup) payappaṭukiṟavar"},{"chapter":80,"verse":10,"text":"80|10|eṉiṉum, nīr avarai alaṭciyam ceytu viṭukiṟīr"},{"chapter":80,"verse":11,"text":"80|11|Avvāṟu ceyyātīr. (Tiru kur'āṉākiya) itu oru nallupatēcamtāṉ"},{"chapter":80,"verse":12,"text":"80|12|evar (nērāṉa vaḻiyil cella) virumpukiṟārō avar itai(c ceviyuṟṟu) ñāpakattil vaittuk koḷvār"},{"chapter":80,"verse":13,"text":"80|13|itu (lavhul mahḥpūḷ eṉṉum) mikka kaṇṇiyamāṉa puttakattil (varaiyappaṭṭuḷḷatu)"},{"chapter":80,"verse":14,"text":"80|14|uyarvumikka tūymaiyāṉa iṭattil vaikkappaṭṭuḷḷatu; (atu) mikap paricuttamāṉatu"},{"chapter":80,"verse":15,"text":"80|15|eḻutupavarkaḷiṉ kaikaḷiṉāl (varaiyappaṭṭatu)"},{"chapter":80,"verse":16,"text":"80|16|(avarkaḷ) mika kaṇṇiyamāṉavarkaḷ, mika nallavarkaḷ"},{"chapter":80,"verse":17,"text":"80|17|(pāvam ceyyum) maṉitaṉukkuk kēṭutāṉ. Avaṉ evvaḷavu naṉṟikeṭṭavaṉāka irukkiṟāṉ"},{"chapter":80,"verse":18,"text":"80|18|etaikkoṇṭu (iṟaivaṉ) avaṉaip paṭaittirukkiṟāṉ (eṉpatai avaṉ kavaṉittāṉā)"},{"chapter":80,"verse":19,"text":"80|19|oru tuḷi intiriyattaik koṇṭutāṉ avaṉ avaṉaip paṭaikkiṟāṉ. (Avaṉ irukkiṉṟa ivvāṟē, avaṉai maṉitaṉāka amaittu) avaṉukkuc caktiyaik koṭuttāṉ"},{"chapter":80,"verse":20,"text":"80|20|piṉṉar, avaṉ ceyyakkūṭiya (naṉmai tīmaikkuriya) vaḻiyai avaṉukku eḷitākki vaittāṉ"},{"chapter":80,"verse":21,"text":"80|21|piṉṉar, avaṉai maraṇikkac ceytu camātiyil pukuttukiṟāṉ"},{"chapter":80,"verse":22,"text":"80|22|piṉṉar (avaṉ virumpiyapoḻutu uyir koṭuttu) avaṉē avaṉai uyirppippāṉ"},{"chapter":80,"verse":23,"text":"80|23|eṉiṉum, niccayamāka maṉitaṉ iṟaivaṉuṭaiya kaṭṭaḷaiyai niṟaivēṟṟuvatillai"},{"chapter":80,"verse":24,"text":"80|24|maṉitaṉ taṉ uṇavai (atu eṅkiruntu evvāṟu varukiṟatu eṉpataic) ciṟitu kavaṉittup pārkkavum"},{"chapter":80,"verse":25,"text":"80|25|niccayamāka nāmē ērāḷamāṉa maḻaiyai poḻiyac ceytōm"},{"chapter":80,"verse":26,"text":"80|26|piṉṉar, pūmiyaiyum piḷan(tu veṭikkac cey)tōm"},{"chapter":80,"verse":27,"text":"80|27|piṉṉar, atiliruntu vittukkaḷai muḷaittu vaḷarumpaṭi ceykiṟōm"},{"chapter":80,"verse":28,"text":"80|28|(ivvāṟu) tirāṭcaik kaṉikaḷaiyum maṟṟa kāykaṟikaḷaiyum"},{"chapter":80,"verse":29,"text":"80|29|jaittūṉaiyum, pērīccai marattaiyum"},{"chapter":80,"verse":30,"text":"80|30|kiḷaikaḷ aṭarnta tōppukaḷaiyum"},{"chapter":80,"verse":31,"text":"80|31|kaṉivarkkaṅkaḷaiyum, puṟpūṇṭukaḷaiyum"},{"chapter":80,"verse":32,"text":"80|32|uṅkaḷukkum uṅkaḷ kālnaṭaikaḷukkum, payaṉaḷikkumāṟu (muḷaikka vaikkiṟōm)"},{"chapter":80,"verse":33,"text":"80|33|(Ulaka muṭiviṉpoḻutu cevikaḷai) ceviṭākkumpaṭiyāṉa (payaṅkarac) captam ēṟpaṭumāyiṉ"},{"chapter":80,"verse":34,"text":"80|34|annāḷil maṉitaṉ taṉ cakōtaraṉai viṭṭum veruṇṭōṭuvāṉ"},{"chapter":80,"verse":35,"text":"80|35|taṉ tāyai viṭṭum, taṉ tantaiyai viṭṭum"},{"chapter":80,"verse":36,"text":"80|36|taṉ maṉaiviyai viṭṭum, taṉ piḷḷaikaḷai viṭṭum (ōṭuvāṉ)"},{"chapter":80,"verse":37,"text":"80|37|annāḷil, avarkaḷil ovvoru maṉitaṉukkum, maṟṟavarkaḷaik kavaṉikka muṭiyātavāṟu contak kavalai ēṟpaṭṭuviṭum"},{"chapter":80,"verse":38,"text":"80|38|eṉiṉum, annāḷil cila mukaṅkaḷ pirakācamuḷḷavaiyākavum"},{"chapter":80,"verse":39,"text":"80|39|cantōṣattāl cirittavaiyākavum irukkum"},{"chapter":80,"verse":40,"text":"80|40|annāḷil vēṟu cila mukaṅkaḷ mītu, puḻuti paṭintu kiṭakkum"},{"chapter":80,"verse":41,"text":"80|41|karumai iruḷ avaṟṟai mūṭikkoḷḷum, (tukkattāl avarkaḷatu mukaṅkaḷ iruḷaṭaintu kiṭakkum)"},{"chapter":80,"verse":42,"text":"80|42|ivarkaḷtāṉ (maṟumaiyai) nirākarittup pāvam ceypavarkaḷ"}]}