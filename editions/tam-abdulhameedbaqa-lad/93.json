{
    "chapter": [
        {
            "chapter": 93,
            "verse": 1,
            "text": "93|1|kālaippoḻutiṉ mītu cattiyamāka"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "93|2|maṟaittuk koḷḷum (iruṇṭa) iraviṉ mītu cattiyamāka"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "93|3|(napiyē!) Umatu iṟaivaṉ um'maik kaiviṭavumillai; (um'mai) veṟukkavumillai"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "93|4|(ovvoru nāḷum umatu) pintiya nilaimai, muntiya nilaimaiyai viṭa niccayamāka mikka mēlāṉatāka irukkiṟatu"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "93|5|umatu iṟaivaṉ mēlum (pala uyar patavikaḷai) umakku aḷippāṉ. (Avaṟṟaik koṇṭu) nīr tiruptiyaṭaivīr"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "93|6|um'mai anātaiyākak kaṇṭu, avaṉ umakkut taṅkum iṭam aḷi(ttu ātari)kka villaiyā"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "93|7|tikaittut tayaṅkiyavarāka um'maik kaṇṭa avaṉ nērāṉa vaḻiyil (um'maic) celuttiṉāṉ"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "93|8|muṭaippaṭṭavarāka um'maik kaṇṭa avaṉ (um'mait) taṉavantarākki vaittāṉ. (Allavā)"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "93|9|Ākavē, (ivaṟṟukku naṉṟi celuttuvataṟkāka) nīr anātaikaḷaik kaṭukaṭukkātīr"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "93|10|yācippavarai veruṭṭātīr"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "93|11|(um'mītu purintuḷḷa) umatu iṟaivaṉiṉ aruḷaip (piṟarukku) aṟivittu (avaṉukku naṉṟi celutti)k koṇṭiruppīrāka"
        }
    ]
}