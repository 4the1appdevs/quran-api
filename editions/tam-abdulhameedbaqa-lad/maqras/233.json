{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "78|1|(napiyē!) Etaippaṟṟi avarkaḷ (taṅkaḷukkuḷ) kēṭṭuk koḷkiṉṟaṉar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "78|2|makattāṉa ceytiyaip paṟṟiya(llavā)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "78|3|ataippaṟṟi avarkaḷ (uṇmaikku) muraṇāṉa apippirāyam koṇṭirukkiṉṟaṉar"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "78|4|(Taṅkaḷ eṇṇam tavaṟu eṉpatai) aticīkkirattil avarkaḷ naṉku aṟintu koḷvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "78|5|piṉṉar, avaciyam aticīkkirattil (ataṉ uṇmaiyai) naṉku aṟintu koḷvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "78|6|(ivvaḷavu periya) pūmiyai nām (uṅkaḷukku) virippāka amaikka villaiyā"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "78|7|iṉṉum, (atil nām) malaikaḷai muḷaikaḷāka (niṟuttavillaiyā)"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "78|8|jōṭi jōṭiyāka uṅkaḷai nāmē paṭaittirukkiṟōm"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "78|9|nāmē uṅkaḷ nittiraiyai (uṅkaḷukku) ōyvāka ākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "78|10|nāmē iravai (uṅkaḷukku)p pōrvaiyāka ākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "78|11|nāmē pakalai (uṅkaḷ) vāḻvait tēṭikkoḷḷum nēramākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "78|12|uṅkaḷukku mēlirukkum palamāṉa ēḻu vāṉaṅkaḷaiyum nāmē amaittōm"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "78|13|atil (cūriyaṉaip) pirakācikkum tīpamāka amaittōm"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "78|14|kārmēkattiliruntu perum maḻaiyai poḻiyac ceykiṟōm"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "78|15|ataik koṇṭu tāṉiyaṅkaḷaiyum puṟpūṇṭukaḷaiyum muḷaippikkiṟōm"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "78|16|iṉṉum, kiḷaikaḷ aṭarnta cōlaikaḷaiyum (uṟpatti ceykiṟōm)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "78|17|niccayamāka (ivarkaḷ tarkkittu nirākarittuk koṇṭirukkum) antat tīrppu nāḷtāṉ (vicāraṇaikkuk) kuṟippiṭṭa kālamākum"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "78|18|(ataṟkāka) sūr (eṉṉum ekkāḷam) ūtappaṭum nāḷil nīṅkaḷ kūṭṭam kūṭṭamāka varuvīrkaḷ"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "78|19|vāṉam tiṟakkappaṭṭu (atil) pala vaḻikaḷ ēṟpaṭṭu viṭum"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "78|20|malaikaḷ (tam iṭattiliruntu) peyarkkappaṭṭu tūḷtūḷāki (paṟantu) viṭum"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "78|21|niccayamāka narakam (intap pāvikaḷiṉ varavai) etirpārttuk koṇṭirukkiṟatu"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "78|22|(pāvikaḷākiya) inta aniyāyakkārarkaḷ taṅkumiṭam atuvē"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "78|23|atil avarkaḷ nīṇṭa kālaṅkaḷ taṅkiviṭuvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "78|24|atil kotikkum nīraiyum cīḻ calattaiyum tavira avarkaḷ (vēṟu oru) kuṭipāṉattaiyum, kuḷircciyaiyum cuvaikka māṭṭārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "78|25|Atil kotikkum nīraiyum cīḻ calattaiyum tavira avarkaḷ (vēṟu oru) kuṭipāṉattaiyum, kuḷircciyaiyum cuvaikka māṭṭārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "78|26|itu (avarkaḷ ceyalukkut) takumāṉa kūliyākum"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "78|27|ēṉeṉṟāl, niccayamāka avarkaḷ (maṟumaiyiṉ) kēḷvi kaṇakkai nampavē illai"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "78|28|avarkaḷ nam vacaṉaṅkaḷai mika alaṭciyamākap poyppittārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "78|29|eṉiṉum, ivai aṉaittaiyum nām (nam kuṟippup) puttakattil pativu ceytu koṇṭōm"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "78|30|ākavē, (maṟumaiyil avarkaḷai nōkki) ‘‘vētaṉaiyait tavira nām uṅkaḷukku (vēṟetaiyum) atikappaṭutta māṭṭōm. Ākavē, (itaic) cuvaittup pāruṅkaḷ'' (eṉṟu kūṟuvōm)"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "78|31|(āyiṉum), iṟaiyaccamuṭaiyavarkaḷukkō niccayamāka pātukāppāṉa (corkkam eṉṉum) iṭam uṇṭu"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "78|32|(aṅku vacippataṟku) tōṭṭaṅkaḷum (avaṟṟil pucippataṟku avarkaḷukku) tirāṭcaik kaṉikaḷum uṇṭu"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "78|33|(maṉaivikaḷāka) orē vayatuṭaiya (kaṇṇaḻakikaḷāṉa) neñcu nimirnta kaṉṉikaḷum"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "78|34|(pāṉaṅkaḷ) niṟainta kiṇṇaṅkaḷum (avarkaḷukkuk kiṭaikkum)"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "78|35|aṅku avarkaḷ vīṇ vārttaiyaiyum poyyaiyum ceviyuṟa māṭṭārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "78|36|(ivaiyellām ivarkaḷiṉ naṉmaikaḷukkuk) kaṇakkāṉa kūliyākavum (kiṭaikkum. Ataṟku mēl) umatu iṟaivaṉ puṟattāl naṉkoṭaiyākavum (iṉṉum atikam) avarkaḷukkuk kiṭaikkum"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "78|37|avaṉē vāṉaṅkaḷ, pūmi, ivaṟṟukku mattiyiluḷḷa aṉaittiṉ urimaiyāḷaṉum aḷavaṟṟa aruḷāḷaṉum āvāṉ. Eṉiṉum, (annāḷil evarumē) avaṉ muṉ pēca cakti peṟamāṭṭārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "78|38|jiprayīlum, vāṉavarkaḷum aṇi aṇiyāka niṟkum annāḷil, evarumē avaṉ muṉ pēca (cakti peṟa) māṭṭārkaḷ. Eṉiṉum, rahmāṉ evarukku aṉumati koṭuttu ‘‘cari! Pēcuvīrāka!'' Eṉavum kūṟiṉāṉō avar (maṭṭum) pēcuvār"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "78|39|Ittakaiya nāḷ (varuvatu) uṟuti! Ākavē, virumpiyavaṉ taṉ iṟaivaṉiṭamē taṅkum iṭattait tēṭikkoḷḷavum"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "78|40|camīpattil niccayamāka uṅkaḷukku varakkūṭiya oru vētaṉaiyaip paṟṟi nām eccarikkai ceykiṟōm. Annāḷil ovvoru maṉitaṉum taṉ karaṅkaḷ ceyta ceyaliṉ palaṉai(t taṉ kaṇṇāl) kaṇṭukoḷvāṉ. Nirākarippavaṉō tāṉ maṇṇāka ākavēṇṭumē eṉṟu pulampuvāṉ"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "79|1|(pāvikaḷiṉ uyirkaḷaip) palamākap paṟippavarkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "79|2|(nallavarkaḷiṉ ātmāvai) eḷitākak kaippaṟṟupavarkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "79|3|(ākāyattilum, kaṭalilum) ativēkamāka(p paṟantu) nīntic cellum vāṉavarkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "79|4|(iṟaivaṉiṉ kaṭṭaḷaiyai niṟaivēṟṟa) pōṭṭi pōṭṭukkoṇṭu munti celpavarkaḷ mītum cattiyamāka"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "79|5|ellāk kāriyaṅkaḷaiyum (iṟaivaṉiṉ kaṭṭaḷaippaṭi) nirvakikkiṉṟa (vāṉa)varkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "79|6|(koṭiya pūkampattāl pūmi) palamāka atircciyuṟum nāḷil"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "79|7|(mēlum) atait toṭarntu (pala pūkampa atirccikaḷ) varum (nāḷil ulakam muṭivuṟṟē tīrum)"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "79|8|annāḷil, uḷḷaṅkaḷellām tiṭukkiṭṭu naṭuṅkik koṇṭirukkum"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "79|9|pārvaikaḷellām (payattāl) kīḻnōkki niṟkum"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "79|10|(ivvāṟirukka, nirākarippavarkaḷ itai maṟuttu) ‘‘nām (iṟanta piṉṉar) meyyākavē nām (uyirppikkappaṭṭu) muntiya nilaimaikkut tiruppappaṭuvōmā"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "79|11|(atuvum) nām ukki elumpākap pōṉataṉ piṉṉarā (uyir koṭuttu eḻuppappaṭuvōm?) Eṉṟu kūṟukiṉṟaṉar"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "79|12|‘‘avvāṟāyiṉ, atu perum naṣṭamāṉa mīṭcitāṉ eṉṟum avarkaḷ (parikācamākak)'' kūṟukiṉṟaṉar"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "79|13|(itu avarkaḷukku acāttiyamākat tōṉṟalām; eṉiṉum, namakkō) atu ōr ataṭṭal (oru uṟuttal, oru captam)tāṉ"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "79|14|uṭaṉē avarkaḷ aṉaivarum (uyir peṟṟeḻuntu) vantu oru tiṭalil kūṭiviṭuvārkaḷ"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "79|15|(Napiyē!) Mūsāvuṭaiya ceyti umakku eṭṭiyatā"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "79|16|‘tuvā' eṉṉum paricuttamāṉa ōṭaikku avaruṭaiya iṟaivaṉ avarai aḻaittatai niṉaivu kūṟuṅkaḷ"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "79|17|‘‘ḥpir'avṉiṭam celvīrāka! Niccayamāka avaṉ varampu mīṟiviṭṭāṉ"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "79|18|(avaṉiṭam) kūṟuvīrāka! ‘‘(Pāvaṅkaḷai viṭṭum) nī paricuttavāṉāka āka uṉakku viruppam tāṉā"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "79|19|(avvāṟāyiṉ) uṉ iṟaivaṉ pakkam cellakkūṭiya vaḻiyai nāṉ uṉakku aṟivikkiṟēṉ. Avaṉukku nī payantukoḷ'' (ivvāṟu, mūsāvukku iṟaivaṉ kaṭṭaḷaiyiṭṭāṉ)"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "79|20|(mūsā avaṉiṭam ceṉṟu avvāṟu kūṟip) periyatoru attāṭciyaiyum avaṉukkuk kāṇpittār"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "79|21|(eṉiṉum) avaṉō, ataip poyyākki (avar kūṟiyataṟku) māṟu ceytāṉ"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "79|22|piṉṉar (avarai viṭṭum) vilaki (avarukkut tīṅkiḻaikkavum) muyaṟci ceytāṉ"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "79|23|itaṟkāka(t taṉ makkaḷai) oṉṟu kūṭṭi (avarkaḷukku) aṟikkaiyiṭṭāṉ"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "79|24|(avarkaḷai nōkki) ‘‘nāṉtāṉ uṅkaḷ mēlāṉa iṟaivaṉ'' eṉṟu kūṟiṉāṉ"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "79|25|ātalāl, allāh avaṉai im'mai maṟumaiyiṉ vētaṉaiyaik koṇṭu piṭittuk koṇṭāṉ"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "79|26|payappaṭupavarkaḷukku meyyākavē itil oru nalla paṭippiṉai irukkiṟatu"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "79|27|(maṉitarkaḷē!) Nīṅkaḷ palamāṉa paṭaippā? Allatu vāṉamā? Avaṉtāṉ avvāṉattaip paṭaittāṉ"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "79|28|avaṉē ataṉ mukaṭṭai uyartti, atai oḻuṅkupaṭuttiṉāṉ"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "79|29|avaṉē, ataṉ iravai iruḷākki(c cūriyaṉaik koṇṭu) ataṉ pakalai veḷiyākki (veḷiccamākki)ṉāṉ"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "79|30|itaṟkup piṉṉar, avaṉē pūmiyai virittāṉ"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "79|31|avaṉē atiliruntu nīraiyum, mēyccal poruḷkaḷaiyum veḷiyākkukiṟāṉ"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "79|32|malaikaḷaiyum avaṉē (atil) uṟutiyāka ūṉṟiṉāṉ"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "79|33|uṅkaḷukkum, uṅkaḷ kālnaṭaikaḷukkum payaṉaḷikkakkūṭiyavaiyāka (avaṟṟai atil amaittāṉ)"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "79|34|(maṟumaiyiṉ) perum amaḷi vantāl"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "79|35|maṉitaṉ ceytatellām annāḷil avaṉuṭaiya ñāpakattiṟku vantuviṭum"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "79|36|Maṉitarkaḷ kaṇ muṉ narakam koṇṭu vantu vaikkappaṭṭu viṭum"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "79|37|evaṉ varampu mīṟiṉāṉō"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "79|38|(maṟumaiyaip puṟakkaṇittu) ivvulaka vāḻkkaiyait tērnteṭuttu koṇṭāṉō"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "79|39|avaṉ cellum iṭam niccayamāka narakamtāṉ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "79|40|evaṉ taṉ iṟaivaṉiṉ muṉṉāl (vicāraṇaikkāka) niṟpataip (paṟṟip) payantu, (tappāṉa) carīra iccaiyai viṭṭut taṉṉaittaṭuttuk koṇṭāṉō"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "79|41|avaṉ cellumiṭam niccayamāka corkkamtāṉ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "79|42|(napiyē!) Maṟumaiyaip paṟṟi, atu eppoḻutu varumeṉa um'miṭam avarkaḷ kēṭkiṉṟaṉar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "79|43|(eppoḻutu varumeṉṟu) etaṟkāka nīr kūṟa vēṇṭum"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "79|44|ataṉ muṭivellām, umatu iṟaivaṉiṭamē irukkiṟatu"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "79|45|annāḷaip paṟṟip payappaṭakkūṭiyavarkaḷukku nīr accamūṭṭi eccarikkai ceypavarē tavira vēṟillai. (Atu varum kālattaiyum, nērattaiyum aṟivippatu umatu kaṭamaiyalla)"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "79|46|atai avarkaḷ kaṇṇāl kāṇum nāḷil, mālaiyilō allatu kālaiyilō oru coṟpa nēramē tavira (ivvulakil) taṅkiyirukkavillai eṉṟē avarkaḷukkut tōṉṟum"
        }
    ]
}