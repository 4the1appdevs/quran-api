{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "86|1|vāṉattiṉ mītum, (iravil) utayamākakkūṭiyatiṉ mītum cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "86|2|(napiyē!) Utayamākakkūṭiyatu eṉṉaveṉṟu nīr aṟivīrā"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "86|3|(itutāṉ) iravellām cuṭariṭṭup pirakācittuk koṇṭirukkiṉṟa naṭcattiram"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "86|4|ovvoru maṉitaṉiṭamum (nam'māl ēṟpaṭuttappaṭṭa) kaṇkāṇikkak kūṭiya oru (vāṉa)var illāmalillai"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "86|5|ākavē, maṉitaṉ, tāṉ etaṉāl paṭaikkappaṭṭirukkiṟāṉ eṉpatai kavaṉikkavum"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "86|6|kutittu veḷippaṭum oru tuḷit taṇṇīraik koṇṭē paṭaikkappaṭṭāṉ"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "86|7|atu, mutukantaṇṭukkum neñcukkum mattiyiliruntu veḷippaṭukiṟatu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "86|8|(Ivvāṟu paṭaikkiṉṟa) avaṉ (maṉitaṉ iṟantapiṉ uyir koṭuttu) avaṉai mīḷavaikkavum niccayamāka āṟṟaluṭaiyavaṉṉa"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "86|9|eṉṟaiya tiṉam ellā marmaṅkaḷum veḷippaṭṭuviṭumō"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "86|10|(aṉṟaiya tiṉam) maṉitaṉukku oru caktiyum irukkātu. Utavi ceypavaṉum irukka māṭṭāṉ"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "86|11|maḻai poḻiyum vāṉattiṉ mītu cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "86|12|(puṟpūṇṭukaḷ muḷaikka) veṭikkum pūmiyiṉ mītum cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "86|13|meyyākavē itu (naṉmai tīmaikaḷaip) pirittaṟivikkakkūṭiya collākum"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "86|14|itu vīṇ parikācamā(ṉa vārttaiya)lla"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "86|15|(napiyē!) Niccayamāka avarkaḷ (umakku virōtamāka) oru cūḻcci ceykiṟārkaḷ"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "86|16|nāṉum (avarkaḷukku virōtamāka) oru cūḻcci ceyvēṉ"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "86|17|ākavē, innirākarippavarkaḷukku (atu varai) nīr avakācamaḷippīrāka. (Atikamalla;) oru coṟpa avakācam avarkaḷukku aḷippīrāka"
        }
    ]
